/******** 忘记密码页面 style **********/
.forget-wrap{
  position: relative;
  height: 500px;
  margin: 20px 0 20px;
  z-index: 2;
  .forget-form{
    position:relative;
    background: #ffffff;
    min-height: 450px;
    z-index: 1;
    .forget-content{
      position: absolute;
      width: 990px;
      margin: 0 auto;
      min-height: 350px;
      .forget-setps{
        .container {
          font-family: 'Alegreya Sans', sans-serif;
          width: 800px;
          margin: 0 auto;
          .progressbar {
            margin: 0;
            padding: 0;
            counter-reset: step;
            li {
              list-style-type: none;
              width: 33.3333%;
              float: left;
              font-size: 20px;
              position: relative;
              text-align: center;
              text-transform: uppercase;
              color: rgba(67, 67, 67, 0.65);
              span{
                font-size: 14px;
              }
              &:before {
                width: 30px;
                height: 30px;
                counter-increment: step;
                content: counter(step);
                line-height: 30px;
                border: 2px solid #7d7d7d;
                display: block;
                text-align: center;
                margin: 0 auto 10px auto;
                border-radius: 50%;
                background-color: #ffffff;
              }
              &:after {
                width: 100%;
                height: 2px;
                content: '';
                position: absolute;
                background-color: #7d7d7d;
                top: 15px;
                left: -50%;
                z-index: -1;
              }
              &:first-child{
                &:after {
                  content: none;
                }
              }
              &.active {
                font-size: 20px;
                color: #de0313;
                span{
                  font-size: 14px;
                }
                &:before {
                  border-color: #de0313;
                }
              }
              &.active + li:after{
                background-color: #de0313;
              }
            }
          }
          &:after{
            content: '';
            display: block;
            height: 0;
            clear: both;
          }
        }
      }
      .forget-left{
        margin: 0 auto;
        width: 800px;
        z-index: 9999;
        .forget-title{
          height: 40px;
          line-height: 22px;
          text-align: left;
          margin:40px 0 1px 0;
          p{
            margin-left: 100px;
            padding-left: 10px;
            font-size: 14px;
            color: #6c6c6c;
            border-left: 5px solid #de0313;
          }
        }
        .forget-ul{
          margin-top: 20px;
          margin-left: 80px;
          margin-bottom:40px;
          .item{
            width: 720px;
            height: 40px;
            position:relative;
            margin-bottom: 28px;
          }
          .msg-info{
            margin-left: 100px;
            color: #de2f29;
            display: none;
          }
        }
      }
      &:after{
        content: '';
        display: block;
        height: 0;
        clear: both
      }
      .msg{
        margin: 30px auto;
        width: 600px;
        text-align: center;
        .icon-area{
          margin: 30px auto;
          width: 100%;
          .icon-success{
            width: 1em;
            margin: 0 auto;
            padding: 0;
            text-align: center;
            &:before{
              content:'\e609';
              font-family: "iconfont";
              font-style: normal;
              font-weight: normal;
              display: inline-block;
              vertical-align: middle;
              text-decoration: inherit;
              width: 1em;
              text-align: center;
              font-variant: normal;
              text-transform: none;
              line-height: 1em;
              font-size: 54px;
              padding: 20px;
              background: #09BB07;
              border-radius: 50%;
              color: #ffffff;
            }
          }
          .icon-error{
            width: 1em;
            margin: 0 auto;
            padding: 0;
            text-align: center;
            &:before{
              content:'\e62b';
              font-family: "iconfont";
              font-style: normal;
              font-weight: normal;
              display: inline-block;
              vertical-align: middle;
              text-decoration: inherit;
              width: 1em;
              text-align: center;
              font-variant: normal;
              text-transform: none;
              line-height: 1em;
              font-size: 54px;
              padding: 20px;
              background: #de0313;
              border-radius: 50%;
              color: #ffffff;
            }
          }
        }
        .text-area{
          margin-bottom: 25px;
          padding: 0 20px;
          .msg-title{
            margin-bottom: 5px;
            font-weight: 400;
            font-size: 20px;
          }
          .msg-desc{
            font-size: 14px;
            color: #888;
          }
        }
      }
    }
    &:after{
      content: '';
      display: block;
      height: 0;
      clear: both
    }
  }
}

