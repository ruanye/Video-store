$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

@mixin font-dpr($font-size) {
    font-size: $font-size;

    [data-dpr="2"] & {
        font-size: $font-size * 2;
    }
    [data-dpr="3"] & {
        font-size: $font-size * 3;
    }
}
body {
    background-color: #f3f3f3;
}
.bottom {
    width: 10.0rem;
    position: fixed;
    bottom: 0;

    a {
        display: block;
        height: 1.09375rem;
        line-height: 1.09375rem;
        font-size: 0.46875rem;
        background-color: #fff;
        text-indent: 0.46875rem;
        color: #999;
        border-top: 1px solid #c9c9c9;
        border-bottom: 1px solid #c9c9c9;

        span {
            float: right;
            margin-right: 0.46875rem;
            font-size: 0.625rem;
             i{
                font-size: 0.5rem;
                vertical-align: bottom;
            }
        }
    }
}
.listcontainer {
    margin-bottom: 1.5rem;

    .list {
        background-color: #fff;
        margin-top: 0.125rem;

        .addtext {
            padding: 0.3125rem 0;
            border-bottom: 1px solid #dcdcdc;

            p {
                margin-left: 0.46875rem;
            }
            .p1 {
                font-size: 0.5rem;
                line-height: 0.5625rem;

                .name {
                    margin-left: 0.1875rem;
                }
                .tel {
                   float: right;
                   margin-right: 0.3125rem;
                }
            }
            .p2 {
                padding-top: 0.46875rem;
                font-size: 0.40625rem;
                color: #666;
            }
            .addressicon {
                width: 0.53125rem;
                height: 0.515625rem;
                vertical-align: middle;
            }
        }
        .edit {
            position: relative;
            height: 1.0625rem;
            font-size: 0.40625rem;
            color: #666;

            .right {
                position: absolute;
                right: 0.53125rem;
                height: 1.03125rem;
                line-height: 1.03125rem;

                a {
                    color: #666;
                }
                .ed {
                    margin-right: 0.9375rem;
                }
            }
            .remberme {
                height: 0.8rem;
                line-height: 0.8rem;
                margin-left: 0.4375rem;
                display: inline-block;
                color: #616161;
                transform: translateZ(0);
                -webkit-transform: translateZ(0);

                .icon-rember {
                    
                }
                .icon {
                    .quan1{
                        display: none;

                    }
                    .quan{
                         display:inline-block;
                        vertical-align: middle;
                        font-size: 0.5625rem;
                         margin-bottom: 0.125rem;
                        }
                    .quan1 {
                        vertical-align: middle;
                        font-size: 0.75rem;
                        color: #07b70b;
                         margin-bottom: 0.275rem;
                        } 

                    &.sel {
                        .quan1{
                            display:inline-block;
                        }
                         .quan{
                            display: none;

                         }
                    }
                }
            }
        }
    }
}
address{
    display:inline-block;
    margin-left: 0.15625rem;
    line-height: 1.0625rem;
}
 @font-face {font-family: 'iconfont';
    src: url('fonts/iconfont/iconfont.eot'); /* IE9*/
    src: url('fonts/iconfont/iconfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('fonts/iconfont/iconfont.woff') format('woff'), /* chrome、firefox */
    url('fonts/iconfont/iconfont.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('fonts/iconfont/iconfont.svg#iconfont') format('svg'); /* iOS 4.1- */
}
.iconfont{
    font-family:"iconfont" !important;
    font-size:16px;
    font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}
