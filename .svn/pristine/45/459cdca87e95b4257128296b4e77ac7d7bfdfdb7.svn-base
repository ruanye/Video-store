$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";

@charset "UTF-8";
.wrap-page,
body,
html {
    height: 100%
}
body {
    font:12px/1.5 "Microsoft YaHei",tahoma,arial,'Hiragino Sans GB','宋体',sans-serif
}
.page{
    width:100%;
    height: 100%;
    overflow: hidden;
    position:relative;
}
.flex{
    display: flex;
}
#page1{
	background:#5472b7 url(../images/page1-bg.png) no-repeat center center;
	background-size:100% 100%;
	.p1{
		color:#fff;
		font-size:0.46875rem;
		text-align:center;
		padding-top:0.3125rem;
	}
	.p2{
		width:7.4375rem;
		height: 1.828125rem;
		background:url(../images/page1-p2.png) no-repeat center center;
		background-size:100% 100%;
		margin:0.46875rem auto 0;
	}
	.p3{
		color:#fff;
		font-size:0.43875rem;
		text-align:center;
		padding-top:0.3125rem;
		span{
			color:#f6e08a;
		}
	}
	.p4{
		color:#fff;
		font-size:0.48875rem;
		text-align:center;
		padding-top:0.3125rem;
	}
	.icon{
		width:5.265625rem;
		height: 5.171875rem;
		background:url(../images/page1-1.png) no-repeat center center;
		background-size:100% 100%;
		margin:0.46875rem auto 0;
	}
	.getBtn{
		display: block;
		width:4.9375rem;
		height: 1.203125rem;
		background:url(../images/getBtn.png) no-repeat center center;
		background-size:100% 100%;
		margin:0.46875rem auto 0;
	}
}
#page2{
	background:#5472b7 url(../images/page2-bg.png) no-repeat center center;
	background-size:100% 100%;	
	.p1{
		color:#fff;
		font-size:0.46875rem;
		text-align:center;
		padding-top:0.3125rem;
	}
	.content{
		width:7.359375rem;
		height: 8.65625rem;
		margin: 0.98125rem auto 0;
		background:url(../images/page2-content.png) no-repeat center center;
		background-size:100% 100%;	
		position:relative;
		input{
			border:none;
			outline: none;
			position:absolute;
			height:1.2625rem;
			display: block;
			left:50%;
			transform: translate(-50%,0);
			top:1.66875rem;
			width:4.6875rem;
			background: #1e3788;
			text-align:center;
			font-size:0.525rem;
			color:#fff;
		}
	}
	.getPrice{
		width:4.9375rem;
		height: 1.203125rem;
		margin:0.625rem auto;
		background:url(../images/page2-price.png) no-repeat center center;
		background-size:100% 100%;	
	}
}
#page3{
	background:#5472b7 url(../images/page3-bg.png) no-repeat center center;
	background-size:100% 100%;	
	.p1{
		color:#fff;
		font-size:0.46875rem;
		text-align:center;
		padding-top:0.3125rem;
	}	
	.p2{
		background:#5472b7 url(../images/share-icon.png) no-repeat right center;
		background-size:5.571875rem 1.8rem;	
		height: 1.8rem;
		margin-right:0.46875rem;
	}
	.p3{
		color:#fff;
		font-size:0.56875rem;
		text-align:center;
	}
	.content{
		background:#5472b7 url(../images/hb.png) no-repeat center center;
		background-size:100% 100%;
		width:4.59375rem;
		height: 8.359375rem;
		margin:0 auto 0.46875rem;
		.money{
			padding-top:3.425rem;
			text-align:center;
			color:#fff;
			font-size:0.50875rem;			
		}
		.text{
			text-align:center;
			color:#fff;
			font-size:0.50875rem;
		}
	}
	.discount{
		display: flex;
		justify-content: space-around;
		.left,.right{
			width:3.921875rem;
			height: 0.96875rem;
		}
		.left{
			background: url(../images/left.png) no-repeat center center;
			background-size:100% 100%;	
			.text{
				color:#fff;
				text-align: center;
				height: 100%;
				line-height: 0.96rem;
				font-size:0.43875rem;
			}		
		}		
		.right{
			background: url(../images/right.png) no-repeat center center;
			background-size:100% 100%;			
		}
	}
}
#page4{
	background:#5472b7 url(../images/page3-bg.png) no-repeat center center;
	background-size:100% 100%;	
	.p1{
		color:#fff;
		font-size:0.46875rem;
		text-align:center;
		padding-top:0.3125rem;
	}	
	.discount{
		.left{
			width:3.921875rem;
			height: 0.96875rem;
			margin:0 auto;
			background: url(../images/left.png) no-repeat center center;
			background-size:100% 100%;	
			.text{
				color:#fff;
				text-align: center;
				height: 100%;
				line-height: 0.96rem;
				font-size:0.43875rem;
			}		
		}		
	}
}