@import "tobe/function";
@import "base";

.bar-tab{
  border-top:1px solid #a0a0a0 ;
  >a{
    border-right: 1px solid #a0a0a0;
    color: #a0a0a0;
    @include font-dpr(14px);
    font-weight: 700;
    &:last-child{
      border-right:none;
    }
  }
  >.tab-item{

  }
  .active{
    color:$base-primary-color !important;
  }
}

/* menu-style */
.menu {
  height: 2.5rem;
  width: 100%;
}

.menu-tab ul {
  position: fixed;
  z-index: 200;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  padding:0;
  margin: 0 auto;
}

.menu-tab li {
  border: 1px solid #a0a0a0;
  height: 2.5rem;
  border-bottom: 0;
  border-right: 0;
  position: relative;
  float: left;
  width: 33.3333333333%;
  list-style: none;
  z-index: 9999;
  >a {
    font-size: 0.75rem;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    border-bottom: 0;
    display: block;
    line-height: 2.5rem;
    text-align: center;
    background: #ffffff;
    span {
      color: #4f4d4f;
      display: inline-block;
      padding-left: 15px;
      -webkit-background-size: 9px auto;
      text-shadow: 0px 1px 0px #ffffff;
    }
    &:only-child span {
      background: none;
      padding-left: 0;
    }
  }
  .on + dl {
    display: block;
    -webkit-animation:fadeInUpBig .5s .2s ease both;
    -moz-animation:fadeInUpBig .5s .2s ease both;
  }
  .off + dl{
    -webkit-animation:fadeOutDown 1s .2s ease both;
    -moz-animation:fadeOutDown 1s .2s ease both;
  }
  .active{
    >span{
      color:$base-primary-color !important;
    }
  }
  &:nth-of-type(1) {
    border-left:0;
  }
}

.menu-tab{
  dl {
    position: absolute;
    z-index: 2;
    bottom: 45px;
    left: 50%;
    width: 5rem;
    text-align: center;
    margin-left: -50px;
    border:1px solid #b3b3b3;
    padding: 0 5px;
    background: #ffffff;
    border-radius:5px;
    -webkit-transform: translate3d(0, 200%, 0);
    transform: translate3d(0, 200%, 0);
    &:before {
      content: "";
      display: inline-block;
      position: absolute;
      z-index: 240;
      bottom: 0;
      left: 50%;
      width: 10px;
      height: 6px;
      bottom: -7px;
      margin-left: -5px;
    }
    dd {
      width: 100%;
      padding: 0;
      margin: 0 auto;
      line-height: 2rem;
      text-align: center;
      border-bottom: 1px solid #b3b3b3;
      background: #ffffff;
      a {
        font-size: 0.75rem;
        display: block;
        color: #4f4d4f;
        text-shadow: 0px 1px 0px #ffffff;
        white-space: pre;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      &:first-of-type{
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
      }
      &:last-of-type {
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        border-bottom:none;
      }
    }
    .menu-arrow {
      position: absolute;
      display: block;
      bottom:-25px;
      right: 38%;
      width: 25px;
      height: 25px;
      overflow: hidden;
      &:after {
        position: absolute;
        bottom: 18px;
        left: 5px;
        width: 15px;
        height: 15px;
        background-color: #ffffff;
        border:1px solid #b3b3b3;
        border-radius: 0;
        content: '';
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
      }
    }
  }
  .masklayer_div {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    display: none;
    background: rgba(0, 0, 0, 0.5);
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
    .on {
      display: block;
    }
  }


  @-moz-keyframes fadeInUpBig{
    from {
      opacity: 0;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }

    to {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }

  @-webkit-keyframes fadeInUpBig {
    from {
      opacity: 0;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }
    to {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }

  @keyframes fadeInUpBig {
    from {
      opacity: 0;
      -webkit-transform: translate3d(0, 100%, 0);
      transform: translate3d(0, 100%, 0);
    }
    to {
      opacity: 1;
      -webkit-transform: none;
      transform: none;
    }
  }


  @-webkit-keyframes fadeOutDown{
    0%{opacity:1;
      -webkit-transform:translateY(0)}
    100%{opacity:1;
      -webkit-transform:translateY(200%)}
  }
  @-moz-keyframes fadeOutDown{
    0%{opacity:1;
      -moz-transform:translateY(0)}
    100%{opacity:1;
      -moz-transform:translateY(200%)}
  }
}

