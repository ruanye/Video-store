@import "tobe/function";
@import "base";

.bar-tab{
  border-top:1px solid #a0a0a0 ;
  >a{
    border-right: 1px solid #a0a0a0;
    color: #a0a0a0;
    @include font-dpr(14px);
    font-weight: 700;
    &:last-child{
      border-right:none;
    }
  }
  >.tab-item{

  }
  .active{
    color:$base-primary-color !important;
  }
}


.content{
  .page-index{
    .logo{
      width: 100%;
      height: 4.4375rem;
      background: url("../images/logo-bg.jpg") top center no-repeat;
      background-size: 100% 4.4375rem;
    }
    .list-block{
      margin:0 ;
      padding-top:0.234375rem;
      background:$white;
      .item{
        padding:0.15625rem 1.0rem;
        margin-bottom:0.234375rem;
        background:$base-primary-bg-color;
        >.item-top{
          width: 100%;
          padding:0.234375rem 0;
          background:url("../images/plus-icon.png") right center no-repeat;
          background-size: 0.5rem 0.5rem;
          border-bottom:1px solid #afb0b1;
          >.item-title{
            /* @include font-dpr(18px);*/
            font-size:0.84375rem;
            text-align: left;
            margin: 0;
            padding:0;
          }
        }
        >.item-body{
          /* @include font-dpr(14px);*/
          font-size: 0.65625rem;
          padding: 0.546875rem 0;
          >p{
            width: 100%;
            margin: 0;
            overflow: hidden;
            white-space:nowrap;
            text-overflow: ellipsis;
          }
        }
      }
    }
    >.advertise{
      min-height: 5.40625rem;
      margin:0.5rem;
      .swiper-container{
        padding-bottom: 0;
        .swiper-wrapper{
          img{
            width: 100%;
          }
        }
        .swiper-pagination-bullet-active{
          background: $base-primary-color;
        }
      }
    }
  }
}
.flex-box{display: flex;}
.flex-1{flex: 1;}
.flex-m{-webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
}

.page-preprice{
  .content{padding-bottom:2.5rem;}
  .bar{line-height: 2.2rem;background: #fff;z-index: 999 !important;}
  .footer{background: #707071;position: fixed;color:#fff;left:0;bottom:0;right:0;height:3.0625rem;text-align:center;line-height:3.0625rem;z-index: 999;display: flex;
    .footer-num{flex:1;}
    .footer-btn{width: 6.2rem;background: #a7cc45;color: #fff}
  }
   .round{height: 3.875rem;width: 3.875rem;line-height:3.875rem;border:1px solid #abd045;border-radius: 50%;margin:auto;}
  .text-right{text-align: right}
  .text-left{text-align: left}
  .text-center{text-align: center}
}
.company-lst li{padding:0.9375rem 0.46875rem;border-bottom:1px solid #ccc;position: relative;}
.company-lst li .lst-logo,.company-lst li .price-info{padding:0 0.9375rem;}
.info-s{font-size: 0.675rem;color: #aaaaaa;}
.price{font-size: 1.15rem;color: #df7878;
span{font-size: 0.875rem;}
}
.price-info{text-align: left !important;}

.lst-logo{width: 5.625rem;border-right:1px solid #ccc;text-align: center;}
.lst-logo img{width:100%;margin:auto;}
.lst-logo p{margin:0 auto !important;font-size: 0.675rem;}

.lst-check{display: inline-block;position:absolute; right:0;left:0;top:0;bottom:0;}
.lst-check input[type="radio"]{
  border: 0 none !important;
  clip: rect(1px,1px,1px,1px);
  height: 1px !important;
  overflow: hidden !important;
  position: absolute !important;
  width: 1px !important;

}
  .lst-check label{
  
    height: 100%;
    text-align: center;
    display: inline-block;
    position: relative;
    width: 100%;
    z-index: 999;
    
  }
.lst-check input[type="radio"]:checked+label{
border:1px solid #a6ce38;
  }
  .lst-check input[type="radio"]:checked+label:after{
    content:url(../images/checked.png);
    position: absolute;
   top:50%;
   right:1.25rem;
   margin-top: -0.5rem;

  }
.company-info{padding:0.9375rem;background: #f1f1f5;font-size: 0.375rem;-webkit-animation:fadeIn 1s .2s ease both;
-moz-animation:fadeIn 1s .2s ease both;}

@-webkit-keyframes fadeIn
{
0%{opacity:0}
100%{opacity:1}
}
@-moz-keyframes fadeIn
{
0%{opacity:0}
100%{opacity:1}
}