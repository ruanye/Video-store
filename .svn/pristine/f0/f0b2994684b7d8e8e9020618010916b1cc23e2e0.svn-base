@import "tobe/function";
@mixin font-dpr($fonts-size) {
  font-size: $fonts-size;
  [data-dpr="2"] & {
    font-size: $fonts-size * 2;
  }
  [data-dpr="3"] & {
    font-size: $fonts-size * 3;
  }
}

* {
  margin: 0;
  padding: 0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance: none;
  font-family: "Microsoft YaHei";
}

button {
  border: none;
}

button:focus {
  outline: none;
}

html,
body {
  height: 100%;
}

.wrap-page {
  height: 100%;
  background-origin: content-box;
  -webkit-background-origin: content-box;
  -webkit-overflow-scrolling: touch;
  background: #f6f5fa;
  background-size: 100% auto;
  text-align: center;
  max-width: 760px;
  width: 100%;
  margin: auto;
  padding: 0.25rem 0 2.34375rem;
}

.page {
  min-height: 100%;
  width: 100%;
  display: flex;
  @include flex-direction;
}

.inner {
  width: 100%;
}

.flex-box {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-m {
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
}

.flex-d {
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: flex-end;
  align-items: flex-end;
  display: flex;
}

.row:after,
.row:before {
  display: table;
  content: " ";
  clear: both
}


.alert-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99999;
  .alert-modal {
    position: fixed;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 280px;
    background-color: #ffffff;
    border-radius: 3px;
    overflow: hidden;
    .alert-title {
      font-size: 14px;
      height: 40px;
      line-height: 30px;
      text-align: center;
      padding: 10px;
    }
    .alert-body {
      font-size: 14px;
      height: 45px;
      text-align: center;
      border-bottom: 1px solid #cccccc;
    }
    .alert-footer {
      text-align: center;
      cursor: pointer;
      height: 40px;
      .alert-btn {
        width: 100%;
        height: 40px;
        line-height: 40px;
        padding: 0px;
        font-size: 14px;
        color: #ffffff;
        float: left;
        &:last-child {
          border-left: 1px solid #cccccc;
        }
        &.btn-cancle {
          color: #de0313;
          font-weight: 500;
          font-size:16px;
          cursor: pointer;
        }
      }
      &:after {
        content: '';
        display: block;
        height: 0;
        clear: both
      }
    }
  }
}

//confim
.confirm-mask {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99999;
  .confirm-modal {
    position: fixed;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 280px;
    background-color: #ffffff;
    border-radius: 3px;
    overflow: hidden;
    .confirm-title {
      font-size: 14px;
      height: 40px;
      line-height: 30px;
      text-align: center;
      padding: 10px;
    }
    .confirm-body {
      font-size: 14px;
      height: 45px;
      text-align: center;
      border-bottom: 1px solid #cccccc;
    }
    .confirm-footer {
      text-align: center;
      cursor: pointer;
      height: 40px;
      .confirm-btn {
        width: 49%;
        height: 40px;
        line-height: 40px;
        padding: 0px;
        font-size: 14px;
        color: #ffffff;
        float: left;
        &:last-child {
          border-left: 1px solid #cccccc;
        }
        &.btn-cancle {
          color: #000000;
          font-weight: 500;
          font-size:16px;
          cursor: pointer;
        }
        &.btn-submit {
          color: #36B9BF;
          font-weight: 500;
          font-size:16px;
          cursor: pointer;
          &:hover {
            color: #de1313;
          }
        }
      }
      &:after {
        content: '';
        display: block;
        height: 0;
        clear: both
      }
    }
  }
}
.content{
  background-color: #ffffff;
  border-bottom:1px solid #e5e5e5;
  &:first-of-type{
    border-top:1px solid #e5e5e5;
  }
  .list-left{
    width: 2.203125rem;
    min-height:3.5625rem;
    border-right:1px solid #e5e5e5;
    padding:0.234375rem;
    .list-icon{
      width: 0.96875rem;
      height: 0.96875rem;
    }
    .list-title{
      width: 100%;
      color: #000000;
      @include font-dpr(12px);
      white-space:nowrap; 
      overflow:hidden; 
      text-overflow:ellipsis;
    }
    .arrow-down {
      position: relative;
      display: block;
      top:0.78125rem;
      left: 50%;
      margin-left:-0.34375rem;
      width: 0.6875rem;
      height: 0.4375rem;
      overflow: hidden;
      transition: transform .1s ease-in 0s;
      -webkit-transition: -webkit-transform .1s ease-in 0s;
      &:after {
        position: absolute;
        bottom: 12px;
        left: 5px;
        width: 0.34375rem;
        height: 0.34375rem;
        background-color: #ffffff;
        border:2px solid #cccccc;
        border-radius: 0;
        content: '';
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
      }
    }
    &.active{
      .arrow-down {
        -webkit-transform: rotateX(-180deg);
        transform: rotateX(-180deg);
      }
    } 
  }
  .list-block{
    width: 100%;
    height: 3.5625rem;
    overflow: hidden;
    text-align: left;
    display: block;
    vertical-align: left;
    .tem-content{
      width: 100%;
      list-style-type:none;
      .item-inner{
        width: 100%;
        height: 1.795625rem;
        line-height: 1.765625rem;
        padding:0 0.3125rem;
        text-align: left;
        border-bottom:1px solid #e5e5e5;
        white-space:nowrap; 
        overflow:hidden; 
        text-overflow:ellipsis;
        @include font-dpr(14px);
        font-weight: none;
        &:last-of-type{
          border-bottom:none;
        }
      }
    }
    &.auto{
      width: 100%;
      height: auto;
      overflow: inherit;
    }
  }
}
.load-more{
  width: 100%;
  height: 1.795625rem;
  line-height: 1.765625rem;
  padding:0 0.3125rem;
  background:#ffffff;
  text-align: center;
  color: #868686;
  @include font-dpr(14px);
  font-weight: none;
}
.not-more{
  position: relative;
  width: 100%;
  height: 1.795625rem;
  line-height: 1.765625rem;
  padding:0 0.3125rem;
  text-align: center;
  color: #868686;
  @include font-dpr(12px);
  font-weight: none;
  &:before{
    position:absolute;
    content: '';
    left: 5.98125rem;
    top: 50%;
    width: 0.78125rem;
    height: 1px;
    background:#868686;
  }
  &:after{
    position:absolute;
    content: '';
    top: 50%;
    right: 5.98125rem;
    width: 0.78125rem;
    height: 1px;
    background:#868686;
  }
}

