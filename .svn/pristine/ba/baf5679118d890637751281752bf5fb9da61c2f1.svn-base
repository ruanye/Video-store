$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #2c51be;
$width: 10rem;

::-webkit-input-placeholder {
    color: #666
}
:-moz-placeholder {
    color: #666
}
::-moz-placeholder {
    color: #666
}
:-ms-input-placeholder {
    color: #666;
}
.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    height: 100%;
    position: relative;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.bg {
    margin: 0 auto;
    width: 9.09375rem;
    height: 16.953125rem;
    background-image: url(../images/bg.png);
    background-size: 100% 100%;
}
.page {
    background: -webkit-linear-gradient(#1c3685 88%, #162a65 12%);
    background: linear-gradient(#1c3685 88%, #162a65 12%);
}
.inputbox {
    position: absolute;
    display: table;
    width: 9.234375rem;
    height: 1.84375rem;
    left: 50%;
    margin-left: -4.6171875rem;
    top: 9.890625rem;
    background-color: #da0000;
    box-shadow: 5px 5px 0px 1px #000;

    &::before {
        position: absolute;
        left: 50%;
        bottom: -0.75rem;
        content: '';
        display: block;
        margin-left: -1px;
        width: 2px;
        height: 0.75rem;
        background-color: #000;
    }
    &::after {
        position: absolute;
        left: 50%;
        margin-left: -0.09375rem;
        bottom: -0.75rem;
        border-radius: 50%;
        content: '';
        display: block;
        width: 0.1875rem;
        height: 0.1875rem;
        background-color: #000;
    }
    span {
        display: table-cell;
        vertical-align: middle;
    }
    input {
        border: none;
        width: 8.78125rem;
        height: 1.4375rem;
        border-radius: 0.3125rem;
        text-align: center;
        font-size: 0.78125rem;
    }
}
.surebtn {
    width: 2.375rem;
    height: 0.9375rem;
    line-height: 0.9375rem;
    color: #fff;
    background-color: #ba0000;
    border-radius: 0.15625rem;
    font-size: 0.5rem;
}
.btnbox {
    width: $width;
    position: absolute;
    top: 14.140625rem;
}
.selimg {
    width: 10.0rem;
    height: 13.84375rem;
}
.page2 {
}
.logo {
    margin-top: 0.546875rem;
    width: 2.90625rem;
    height: 0.421875rem;
}
.suremyselect {
    width: 4.3125rem;
    height: 1.6875rem;
    line-height: 1.6875rem;
    color: #fff;
    background-color: #ba0000;
    border-radius: 0.15625rem;
    font-size: 0.84375rem;
    box-shadow: 5px 5px 0px 1px #000;
}
.suremyselectbox {
    position: absolute;
    width: $width;
    top: 15.296875rem;
    z-index: 200
}
.container {
    position: relative;
    margin: 0 auto;
    margin-top: 0.390625rem;
    width: 9.125rem;
    height: 13.703125rem;
    background: url(../images/bg3.png) no-repeat;
    background-size: 100% 100%;

    ul {
        position: absolute;
        top: 4.5rem;
        left: 0.625rem;
    }
    li {
        height: 0.5rem;
        margin-top: 0.46875rem;
    }
    span {
        float: left;
    }
}
.contry {
    font-size: 0.46875rem;
    color: #fff;
    line-height: 0.5rem;
    width: 1.5625rem;
    text-align: left;
}
.number {
    margin-left: 0.3125rem;
    width: 200px;
    height: 0.5rem;
    background-color: #fac200;
    box-shadow: 5px 5px 0px 1px #000;
}
.mylpbtn {
    width: 4.3125rem;
    height: 1.65625rem;
    background-color: #da0000;
    color: #fff;
    font-size: 0.8125rem;
    border-radius: 0.234375rem;
    box-shadow: 3px 3px 0px 1px #000;
}
.lpbtn {
    position: absolute;
    width: $width;
    top: 14.5rem;

    span {
        color: #fff;
        font-size: 0.5rem;
        margin-top: 0.15625rem;
    }
}
.btn-lp {
    &::before {
        position: absolute;
        right: 0.4375rem;
        content: '';
        display: block;
        margin-top: 0.125rem;
        width: 2.46875rem;
        height: 0.25rem;
        background-color: #da0000;
         -webkit-animation-duration: 1s;
        animation-duration: 1s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
        -webkit-animation-name:myscaleWidth;
        animation-name: myscaleWidth;
        -webkit-animation-timing-function: linear;
        animation-timing-function: linear;
        transform-origin:  left center;
        -webkit-transform:  left center;
        
    }
    &::after {
        position: absolute;
        content: '';
        display: block;
        right: 0.4375rem;
        top: -13.85rem;
        width: 0.1875rem;
        height: 14.25rem;
        background-color: #da0000;
        -webkit-animation-duration: 2s;
        animation-duration: 2s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
        -webkit-animation-name:myscaleHeight;
        animation-name: myscaleHeight;
        -webkit-animation-timing-function: linear;
        animation-timing-function: linear;
        transform-origin: bottom center;
        -webkit-transform: bottom center;
        animation-delay: 2s;
      
    }
}
.jt {
    width: 0.828125rem;
    height: 0.515625rem;
    position: absolute;
    top: -14rem;
    right:0.125rem;
}
