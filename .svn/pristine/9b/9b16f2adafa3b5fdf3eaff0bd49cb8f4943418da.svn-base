$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #8acbb7;
$width: 10rem;

.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    overflow-x: hidden;
    height: 100%;
    position: relative;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
html, body {
    position: relative;
    height: 100%;
}
body {
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
}
.swiper-container {
    width: 100%;
    height: 100%;
}
.swiper-slide {
    text-align: center;
   
    overflow: hidden;
    // -webkit-box-pack: center;
    // -ms-flex-pack: center;
    // -webkit-justify-content: center;
    // justify-content: center;
    // -webkit-box-align: center;
    // -ms-flex-align: center;
    // -webkit-align-items: center;
    // align-items: center;
}

.hide {
    display: none;
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.slide1 {
    background-image: url(../images/bg1.jpg);
    background-size: cover;
}
.slide2 {
    background-image: url(../images/bg2.jpg);
    background-size: cover;
}
.slide3{
    background-image: url(../images/bg3.jpg);
    background-size: cover;
}
.slide4{
    background-image: url(../images/bg4.jpg);
    background-size: cover;
}
.slide5{
    background-image: url(../images/bg5.jpg);
    background-size: cover;
}
.success{
    background-image: url(../images/bg6.jpg);
    background-size: cover;
}
.logo {
    width: 2.046875rem;
    height: 2.046875rem;
    position: absolute;
    top: 1.0rem;
    left: 1.0rem;
}
.returns {
    width: 3.328125rem;
    height: 2.59375rem;
    position: absolute;
    right: 1.21875rem;
    top: 4.09375rem;
    &.a{
       top: 1.0rem;
        left: 1.0rem;  
        &.b{
             width:2.75rem;
             height:1.34375rem
        }
    }
}
.b1{
    width: 5.65625rem;
    height: 5.875rem;
     position: absolute;
     bottom: 0.96875rem;
     right: 0.9375rem;
     &.a{
       width: 7.6875rem;
       height: 5.859375rem;
    }
}
.text{
    margin-top: 4.484375rem;
    display:flex;
    width: 100%;
    height:1.390625rem;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    &.a{
        margin-top: 0.375rem;
        img{width: 7.5rem;
        height:1.75rem}
    }
    &.b{
        margin-top: 3.15625rem;
        img{
            width: 5.390625rem;
            height:0.421875rem
        }
        
    }
    &.c{
        margin-top: 0.3125rem;
        input{

            width: 5.921875rem;
            height:1.234375rem;
            line-height: 1.234375rem;
            border: none;
            background-color: transparent;
            background-image:url(../images/page5-4.png) ;
            background-size: 100% 100%;
            text-align: center;
            font-size: 0.5625rem;
        }
    }
    img{
        width:7.65625rem;
        height:auto
    }
     &.d{
        margin-top: 0.875rem;
        img{
            width: 2.21875rem;
            height:0.796875rem
        }
        
    }
}

.share{
  width: 3.796875rem;
