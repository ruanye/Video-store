@import "tobe/function";
@mixin font-dpr($fonts-size){
    font-size: $fonts-size;

    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }

    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
  margin:0;padding:0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance:none;
  font-family: "Microsoft YaHei";
}
button{border: none;}
button:focus{outline: none;}
html, body{
  height: 100%;
}



.page{
  position: relative;
  height: 100vh;
  width: 100vw;
  overflow:hidden;
  display: none;
  background:#E4E6EB url(../images/bg.png) bottom center no-repeat;
  background-size:100% auto;
  >.logo{
    height: 1.25rem;
    position: absolute;
    top:0.3125rem;
    left:0.3125rem;
  }
  >.content{
    position: absolute;
    top:40%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    .pt{
      width:7rem;
      font-size: 0.7rem;
      line-height: 0.9rem;
      font-weight: bold;
      color: #323B7A;
      margin-bottom: 0.7rem;
    }

    >.tips{
      color: #323B7A;
      font-size: 0.5rem;
      font-weight: bold;
      display: block;
      margin: auto;
      margin-bottom: .3rem;
    }
    >.input{
      display: block;
      margin: auto;
      height: 0.9375rem;
      width: 5rem;
      border: 0px;
      text-align: center;
      margin-bottom: .3rem;
    }
    >.btn{
      display: block;
      height: 0.9375rem;
      width: 5rem;
      background: #40B0A2;
      color: #FFF;
      font-size: 0.4375rem;
      line-height: 0.9375rem;
      margin: auto;
      margin-bottom: .3rem;
    }

    >.result{
      width: 7rem;
      // height: 6rem;
    }
  }
  .share{
    position: absolute;
    bottom:0.5rem;
    left: 50%;
    transform: translate(-50%,0);
    text-align: right;
    height: 0.9rem;
    line-height: 0.9rem;
    width: 5.5rem;
    background: #40B0A2;
    color: #FFF;
    font-size: 0.4375rem;

    margin: auto;
    margin-bottom: .3rem;
    border-radius: 8px;
  }
  &.active{
    display: block;
  }
}


.mask{
  display: none;
  position: fixed;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.9);
  &.active{
    display: block;
  }
}
.maskshare{
  >img{
    position: absolute;
    width: 9rem;
    top: 0px;
    right: 0px;
  }
}
