@import "tobe/function";
@mixin font-dpr($fonts-size){
    font-size: $fonts-size;

    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }

    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
  margin:0;padding:0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance:none;
  font-family: "Microsoft YaHei";
}
button{border: none;}
button:focus{outline: none;}
html, body{
  height: 100%;
}

.blur{
  filter: blur(5px);
}

.page{
  position: relative;
  height: 100vh;
  width: 100vw;
  background-color: rgb(239,239,239);
  background-size: 100% auto;
  overflow:hidden;
  display: none;
  &.active{
    display: block;
  }
}

.page1{
  .top{
    width: 8rem;
    position: absolute;
    top:0.3rem;
    left: 50%;
    transform: translateX(-50%);
  }
  .center{
    width: 8rem;
    position: absolute;
    top:64%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
  .bottom{
    width: 3rem;
    position: absolute;
    bottom:0.3rem;
    left: 50%;
    transform: translateX(-50%);
  }
}
.page2{
  .top{
    width: 8rem;
    position: absolute;
    top:0.3rem;
    left: 50%;
    transform: translateX(-50%);
  }
  .center{
    width: 6rem;
    position: absolute;
    top:52%;
    left: 50%;
    transform: translate(-50%,-50%);
    >.items{
      width: 6rem;
      height: 6rem;
      position: relative;
      >img{
        width: 100%;
        height: 100%;
        position: absolute;
        width: 100%;
        top:0;
        left: 0;
        animation: opacityIn 2s;
        &:first-child{
          animation:none;
        }
      }
    }
    >.tips{
      color: rgb(228,63,115);
      font-size: .5rem;
      font-weight: bold;
      text-align: center;
      margin: 0.3rem 0;
    }
    >.codes{
      width: 100%;
      text-align: center;
      height: 1rem;
      >img{
        width: 1.3rem;
        margin: .1rem;
      }
    }
  }
  .bottom{
    width: 10rem;
    position: absolute;
    bottom:3%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    >.btn.go{
      width: 4.7rem;
      height: 1.5rem;
      line-height: 1.5rem;
      font-size: 0.8rem;
      margin: .5rem;
      display: block;
      margin: 10px auto;
      background: url(../images/btngo.png);
      background-repeat: no-repeat;
      background-size: contain;
      >span{
        // display: inline-block;
        color: #FFF;
        background-color: rgb(58,126,178);
      }
    }
  }
}
.mask{
  display: none;
  position: fixed;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.0);
  &.active{
    display: block;
  }
}
.maskgo{
  >img{
    width: 8rem;
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
}
.maskrule{
  >img{
    width: 8rem;
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
}
.maskget{
  .center{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    text-align: center;
    .info{
      color: #F00;
      font-size: 0.4rem;
      margin: 0.2rem 0px;
    }
    .circle{
      height: 4rem;
      // width: 5rem;
      // background: url('../images/circle.png') no-repeat;
      background-size: 100%;
    }
    .btngo{
      height: 1.2rem;
      line-height: 1.2rem;
      display: inline-block;
      margin-top: .5rem;
      font-size: 0.5rem;
      color: #FFF;
      padding: 0 0.4rem;
      background-color: #1cafc8;
      // transform: skew(-20deg);
      >div{
        // transform: skew(20deg);
      }
    }
  }
}

.maskfetch{
  .center{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    text-align: center;
    .info{
      color: #F00;
      font-size: 0.4rem;
      margin: 0.2rem 0px;
    }
  }
}
