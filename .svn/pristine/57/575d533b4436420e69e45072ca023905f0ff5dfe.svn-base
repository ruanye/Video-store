.mask-details{
    display: none;
    position: fixed;
    z-index: 2;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 8888;
    >.details{
        height: 495px;
        width: 895px;
        background-color: #FFF;
        position: absolute;
        top:50%;
        left: 50%;
        transform: translate(-50%,-50%);
        z-index: 9999;
        >.close{
            position: absolute;
            right: 25px;
            top:25px;
            height: 30px;
            width: 30px;
            cursor: pointer;
        }
        >.content{
            height: 400px;
            width: 400px;
            position: absolute;
            top:50%;
            left: 50%;
            transform: translate(-50%,-50%);
            overflow: hidden;
            border-radius: 50%;
            >.avatar{
                height: 190px;
                width: 190px;
                border-radius: 50%;
                overflow: hidden;
                position: absolute;
                bottom:0%;
                top:50%;
                left: 50%;
                transform: translate(-50%,-50%);
                border: 30px solid #FFF;
                background-size: cover;
                background-repeat: no-repeat;
                background-color: #CCC;
            }
            >.menu{
                position: absolute;
                bottom: 0px;
                top:50%;
                left: 50%;
                width: 520px;
                height: 285px;
                // overflow: hidden;
                // border-radius: 50%;
                transform: translate(-50%,-50%);
                >.items{
                    // width: 520px;
                    // height: 285px;
                    >.item{
                        position: absolute;
                        width: 260px;
                        height: 260px;
                        left:0px;
                        bottom: 125px;
                        transform-origin: 100% 100%;
                        overflow: hidden;
                        cursor: pointer;
                        background-color: rgb(185,185,185);
                        &.active{
                            background-color: rgb(70,205,215);
                        }
                        &:nth-child(1){
                            transform: rotate(0deg) skew(40deg);
                        }
                        &:nth-child(2){
                            transform: rotate(60deg) skew(30deg);
                        }
                        &:nth-child(3){
                            transform: rotate(130deg) skew(40deg);
                        }
                        >span{
                            // display: none;
                            text-align: center;
                            background-color: blue;
                            width: 30px;
                            height: 30px;
                            // border-radius: 50%;
                            position: absolute;
                            bottom:0px;
                            right: 0px;
                            transform: rotate(0deg) skew(0deg);
                            font-size: 18px;
                        }
                    }
                }
                >.tips{
                    >span{
                        position: absolute;
                        font-size: 18px;
                        color: #FFF;
                        cursor: pointer;
                        &:nth-child(1){
                            top:75px;
                            left: 87px;
                        }
                        &:nth-child(2){
                            top:-30px;
                            left: 240px;
                        }
                        &:nth-child(3){
                            top:75px;
                            right: 87px;
                        }
                    }
                }
            }
        }
        >.extmenu{
            >.menu{
                position: absolute;
                top:24%;
                display: none;
                &.left{
                    left: 145px;
                    top:130px;
                    height: 116px;
                    width: 141px;
                    background-image: url(../images/kaoqin3.png);
                    background-repeat: no-repeat;
                    background-size: cover;
                    >p{
                        font-size: 16px;
                        position: relative;
                        top:-33px;
                        cursor: pointer;
                        margin-left: 25px;
                        &:hover{
                            color: #48ccd8;
                        }
                        &:nth-child(1){
                            margin-top: 17px;
                        }
                        &:nth-child(2){
                            margin-top: 25px;
                        }
                        &:nth-child(3){
                            margin-top: 23px;
                        }
                    }
                }
                &.right{
                    top:86px;
                    right:285px;
                    height: 150px;
                    width: 40px;
                    >.stars{
                        height: 20px;
                        width: 20px;
                        position: absolute;
                        bottom: 0px;
                        right: 0px;
                        top:-63px;
                        left:-135px;
                        transform-origin:14px 215px;
                        background-size: cover;
                        background-repeat: no-repeat;
                        cursor: pointer;
                        background-image: url(../images/starts.png);
                        &.active{
                            background-image: url(../images/starts_active.png);
                        }
                        @for $i from 1 through 5 {
                          &:nth-child(#{$i}) {
                               transform: rotate(10deg * $i - 30deg);
                          }
                        }
                    }
                }
            }
        }
        >.extmenu-footer{
            height: 25px;
            line-height: 25px;
            margin: 10px auto;
            text-align: center;
            font-size: 18px;
            position:absolute;
            right: 0px;
            left: 0px;
            bottom:45px;
            font-weight: 700px;
            >.stu_name{
                width: 48%;
                float: left;
                text-align: right;
                padding-right:15px;
            }
            >.stu_no{
                width: 48%;
                float: right;
                text-align: left;
                padding-left:15px;
            }
            &:after{
                content: '';
                display: block;
                height: 0;
                clear: both
            }
        }
    }
}
