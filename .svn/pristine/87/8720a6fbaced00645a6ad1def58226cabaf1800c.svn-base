$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #2c51be;
$width: 10rem;
$placeholdercolor:#ccc;
::-webkit-input-placeholder {
    color: $placeholdercolor
}
:-moz-placeholder {
    color: $placeholdercolor
}
::-moz-placeholder {
    color: $placeholdercolor
}
:-ms-input-placeholder {
    color: $placeholdercolor

}
.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    height: 100%;
   position: relative;
   background: url('../images/bg.png') no-repeat;
   background-size: cover;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.back{
    position: relative;
    width: 7.84375rem;
    height: 12.265625rem;
     background: url('../images/back.png')  no-repeat;
     background-size: 100% 100%;
     margin: 0 auto;
     top: 2.59375rem
}
.start{
    width: 6.296875rem;
    height: 0.90625rem;
    margin-top: 0.59375rem;
}
.redtext{
    color: #f00;
    font-size: 0.5625rem;
    padding-top: 1.84375rem;
    padding-left: 0.78125rem;

}
.border{
    width: 6.25rem;
    height: 0.015625rem;
    background-color: #ff0000;
    margin: 0.46875rem auto 
}
.in1{
    position: relative
}
.city-list{
       z-index: 200;
      
        position: absolute;
        left: 50%;
        margin-left: -(6.40625rem/2);
        width: 6.40625rem;
        height: 0.90625rem;
      
        font-size: 0.46875rem;
        text-align: center;
        li{
             background-color: #fff;
            position: relative;
            z-index: 500;
            width: 100%;
            height: 0.90625rem; 
           
          
        }  
}
.inputbox{
    input{
        width: 6.296875rem;
        height: 0.90625rem;
        border: 1px solid #ed2123;
        font-size: 0.46875rem;
        text-align: center

    }
      &.in2{
            margin-top: 0.5625rem
        }

}
.endimg{

    img{
        margin-top: 5.03125rem;
       width: 7.84375rem;
    height: 7.21875rem;  
    }
   
}
.newbg{
    margin: 0 auto;
    top: 2.015625rem;
    width: 7.84375rem;
    height: 13.0625rem;
    position: relative;
    background-image: url("../images/newuser.png");
    background-size:100% 100%;
    img{
        position: absolute;
        bottom: 1.4375rem;
        width: 6.296875rem;
        height: 0.90625rem;
        left: 50%;
        margin-left: -(6.296875rem/2)
    }
}
.oldbg{
    margin: 0 auto;
    top: 2.015625rem;
    width: 7.84375rem;
    height: 13.0625rem;
    position: relative;
    background-image: url("../images/olduser.png");
    background-size:100% 100%;
    img{
        position: absolute;
        bottom: 1.4375rem;
        width: 6.296875rem;
        height: 0.90625rem;
        left: 50%;
        margin-left: -(6.296875rem/2)
    }
}
.writeinfo{
    font-size: 0.375rem;
    color: #000;
    font-weight: 700;
    margin-bottom: 0.5rem;
}
.triangle-down {
    position: absolute;
    top: 0.28125rem;
    right: 1.125rem;
    width: 0;
    height: 0;
    border-left: 0.234375rem solid transparent;
    border-right: 0.234375rem solid transparent;
    border-top:0.390625rem solid #ccc;
}
