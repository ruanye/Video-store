$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #2c51be;
$width: 10rem;
$placeholdercolor: #fff;

::-webkit-input-placeholder {
    color: $placeholdercolor
}
:-moz-placeholder {
    color: $placeholdercolor
}
::-moz-placeholder {
    color: $placeholdercolor
}
:-ms-input-placeholder {
    color: $placeholdercolor
}
.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    height: 100%;
    overflow-x: hidden;
    position: relative;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.page1, .page3 {
    background: url(../images/bg1.jpg) no-repeat;
    background-size: 100% 100%;
}
.page2 {
    background: url(../images/allbg.jpg) no-repeat;
    background-size: 100% 100%;
}
.logo {
    img {
        width: 2.9375rem;
        height: 0.4375rem;
        margin-top: 1.0625rem;
    }
}
.theme {
    img {
        width: 8.40625rem;
        height: 6.40625rem;
        margin-top: 0.78125rem;
    }
}
#start {
    margin-top: 0.15625rem;
    width: 5.78125rem;
    height: 1.40625rem;
    line-height: 1.40625rem;
    background-color: #be1e27;
    color: #fff;
    font-size: 0.875rem;
    border-radius: 0.4375rem
}
.red {
    color: #be1e27;
}
.content {
    position: relative;
    margin: 0 auto;
    width: 8.40625rem;
    height: 4.296875rem;

    &.content1 {
        margin-top: 0.625rem;
        background: url(../images/fgbg.png) no-repeat;
        background-size: 100% 100%;
    }
    &.content2 {
        margin-top: 0.71875rem;
        background: url(../images/ptybg.png) no-repeat;
        background-size: 100% 100%;
    }
    .right {
        width: 4.34375rem;
        position: absolute;
        right: 0;
        top: 0.625rem;
    }
    .people {
        width: 4.0625rem;
        height: 0.3125rem;
        background-color: #277c60;
    }
    p {
        font-size: 0.375rem;
        color: #277c60;
        line-height: 0.5625rem;
    }
    .icanbtn {
        margin-top: 0.375rem;
        float: right;
        width: 2.78125rem;
        height: 0.78125rem;
        line-height: 0.78125rem;
        color: #fff;
        background: url(../images/tnbg.png) no-repeat;
        background-size: 100% 100%;
        font-size: 0.625rem;
        text-align: center;
    }
}
.cartext {
    margin-top: 0.625rem;

    img {
        width: 6.109375rem;
        height: 1.109375rem
    }
}
.btnbox {
    margin-top: 0.625rem;

    span {
        width: 3.84375rem;
        height: 0.78125rem;
        line-height: 0.78125rem;
        background-color: #b8dcb9;
        color: #0c4834;
        font-size: 0.5rem;
        border-radius: 0.390625rem;
        text-align: center;
        margin: 0 0.34375rem;
    }
}
.maskphone {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background-color: rgba(#fff, 0.6);
    z-index: 20
}
.phonecon {
    position: absolute;
    z-index: 200;
    top: 3.421875rem;
    left: 0.78125rem;
    width: 8.40625rem;
    height: 7.6875rem;
    background-color: #b8dcb9;
    border-radius:0.625rem
}
.inputbox {
    position: relative;
    margin: 0 auto;
    width: 6.40625rem;
    height: 1.5625rem;

    input {
        width: 6.40625rem;
        height: 1.5625rem;
        line-height: 1.5625rem;
        background-color: #267b5f;
        border-radius: 0.78125rem;
        border: none;
        font-size: 0.53125rem;
        text-indent: 0.625rem;
        color: #fff;
    }
    &:before {
        content: '';
        left: 50%;
        margin-left: -0.1875rem;
        top: 1.5625rem;
        display: block;
        border-left: 0.1875rem solid transparent;
        border-right: 0.1875rem solid transparent;
        border-top: 0.375rem solid #217f62;
        position: absolute;
        z-index:300
    }
}
.selbtn {
    width: 4.6875rem;
    height: 0.9375rem;
    line-height: 0.9375rem;
    border-radius: 0.3125rem;
    background-color: #be1e27;
    font-size: 0.625rem;
    color: #fff;
    margin-top: 0.625rem;
}
.jb {
    margin-top: 0.4375rem;

    img {
        width: 0.84375rem;
        height: 1.359375rem;
    }
}
.ctext {
    font-size: 0.5625rem;
    color: #002e1d;
    line-height: 1.25rem;
}
.top{
    position: relative;
    img{

        width:5.84375rem;
        height:1.6875rem;
        position: absolute;
        right: 0.640625rem;
        bottom: -0.9rem;
    }
}
.erw{
    margin-top: 0.46875rem;
    img{
        width:3.8125rem;
        height:3.8125rem

    }
}
.erwtext{
    height: 2.1875rem;
    background-color: #be1e27;
    color: #fff;
    font-size: 0.5rem;
}
.mtext{
    color: #0c4834;
    font-size: 0.34375rem;
    line-height: 0.9375rem;
}
.twocar{

    width:1.671875rem;
    height:2.734375rem;
}
.bcar{
    position: absolute;
    bottom: 0.984375rem;
    right: 3.6875rem;
}