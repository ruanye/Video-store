@import "tobe/function";
@import "base";
.flex-box{display: flex;}
.flex-1{flex: 1;}
.flex-m{-webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
}

#page-bargain,#page-ownerbargain,#page-friendbargain{
  .card{box-shadow:none !important;border-top: 1px solid #f2f1f7;}
  .content{padding-bottom:2.5rem;background: #fff;}
  .list-block{margin:.5rem auto !important;font-size: .75rem;color:#8a8a8a;}
  .list-block .item-content{padding-left:0 !important;}
  .list-block .item-inner {
    margin-left: 0 !important;
    padding-left: .75rem;
    font-size: .75rem;
    .item-title{flex:1;}
    .item-after{width: 4rem;text-align: center;color:#8a8a8a !important;
display: block !important;
}
.item-after:last-child{text-align: right}

}
.lst-h4{padding:0 0.625rem;border-left: 2px solid #f2f1f7;display: inline-block;}
.text-right{text-align: right}
.text-left{text-align: left}
.text-center{text-align: center}
.company-lst{background: #fff;padding:0;margin:0;}
.company-lst li{
  padding:0 0.9375rem;
  position: relative;
  min-height:80px;
}
.company-lst li .lst-logo,.company-lst li .price-info{padding:0 0.9375rem;}
.info-s{font-size: 0.625rem;color: #aaaaaa;}
.price{font-size: 0.6rem;color: #aaaaaa;span{color: #df7878;}}
.price-info{text-align: left !important;}
.info-s{
  font-size:0.8rem;
}

.lst-logo{
  width: 5.625rem;
  height:70px;
  padding:0!important;
  border-right:1px solid #f2f1f7;
  text-align: center;
  position:relative;
}
.lst-logo img{
  height:40px;
  position:absolute;
  top:50%;
  transform: translate(-50%,-50%);
  left:50%;

}
.company-name{
  position:absolute;
  bottom:0;
  left:0.937rem;
  margin :0!important;
  padding:0;
  height: 20px;
  width: 5.625rem;
  text-align: center;
}
  .tb-lst{-webkit-padding-start: 0px;}
  .tb-lst li{padding:1rem;list-style: none;border:1px solid #f2f1f7;margin:.75rem auto;color: #676767;
  h4{margin:0;font-size: 0.875rem}
  }
  .tb-lst .active{
    border:1px solid #a6ce38;
    min-height: 126px;
  }
}
.bargain-opr{padding:0.9375rem;border-top:1px solid #f2f1f7;border-bottom: 1px solid #f2f1f7;text-align: center;}
.com-btn{
  padding:0.3125rem 1.25rem;
   border-radius: 0.135135rem;
  color: #a6ce38;
  -webkit-appearance: none;
  border: 1px solid #a6ce38;
  background: none;
  text-align: center;
  font-size: 0.6875rem}
.black-btn{border: 1px solid #000;color: #000;}
  .info-box{padding:0.46875rem;margin:0.46875rem 1.25rem;background: #ebebeb;border-radius: 0.3125rem;text-align: center;}
  .info-s{font-size: 0.6875rem;}
  .info-m{font-size:0.875rem;margin:.5rem }
.bargain-lst{margin:1.25rem;list-style: none;-webkit-padding-start: 0px;}
.bargain-lst li{margin: 0.46875rem 0;}
.bargain-lst .user-photo{
  height: 1.71875rem;
  width: 1.71875rem;
  border:1px solid #a6ce38;
  border-radius: 50%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-size:100% 100%;
}
.bargain-lst-detail{padding:0.46875rem;font-size: 0.75rem;padding-left:0.3rem;text-align:left}
.foot-box{position: fixed;bottom:0;left:0;right:0;padding:0.46875rem;background: #fff;}
.veiw{padding:15px;text-align: right;}
.veiw a{font-size: 0.6875rem;color: #000;}
.blank-bar{height: 0.46875rem;background: #f2f1f7}
#dialogShow{
  position:absolute;
  top:0;
  bottom:0;
  width:100%;
  background:rgba(0,0,0,0.7);
  z-index:11111;
  display: none;
  .show-text{
    text-align:right;
    color:#fff;
  }
}
.card-content-inner{
  display: none;
}

#page-bargain{
  display: none;
}
#page-ownerbargain{
  display: none;
}
#page-friendbargain{
  display: none;
}
#friend-info,#direct-info{
  h1,h2,h3,h4,h5,h6,p,span{
    font-weight: 500;
  }
}