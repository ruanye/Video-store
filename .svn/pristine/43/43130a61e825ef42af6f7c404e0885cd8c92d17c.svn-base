$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}

.wrap-page {
	.activeList{
		.list{
			.listItem.limit{
				.limit-icon{
					position: absolute;
					right: 0;
					top: 0;
					background: url(../images/1/limit-icon.jpg) no-repeat center center;
					background-size:100% 100%;	
					width: 2.34375rem;
					height: 1.46875rem;				
				}
			}
			.listItem{
				.item-default{
					width:100%;
					height: 100%;
					display: flex;
				}
				height:2.5rem;
				background: #fff;
				margin-bottom: 0.234375rem;
				
				position:relative;
				.goods-icon{
					width:25%;
					// background: url(../images/1/list-icon.jpg) no-repeat center center;
					background-position:center center;
					background-repeat: no-repeat;
					background-size:2.0625rem 2.09375rem;
				}
				.goods-detail{
					width:75%;
					color:#606060;
					font-size: 0.42rem;
					.title{
						padding-top:0.2525rem;
					    overflow: hidden;
					    text-overflow: ellipsis;
					    display: -webkit-box;
					    -webkit-line-clamp: 1;
					    -webkit-box-orient: vertical;
					}
					.time{
						font-size:0.34rem;
					}
					.price{
						margin-top:0.26875rem;
						span{
							color:#cc0000;
						}
					}
	                .limit-money{
	                    display: flex;
	                    z-index: 11111;
	                    .now-money{
	                        color:#cc0000;
	                        font-size:0.43875rem;
	                    }
	                    .old-money{
	                        color:#8c8c8c;
	                        text-decoration:line-through;
	                        margin-left:0.26875rem;
	                        margin-top:0.030625rem;
	                        font-size:0.4rem;
	                    }
	                }
				}
			}
		}
	}
}



