$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
.wrap-page{
	.order-status{
		height:2.8125rem;
		background-color:#fff;
		.order-num{
			border-bottom: 1px solid #e5e5e5;
			height:0.875rem;
			display: flex;
			font-size:0.42rem;
			margin-left:0.5rem;
			color:#4a4a4a;
			.text{
				width:2.34375rem;
				line-height: 0.859375rem;
			}
			.number{
				line-height: 0.859375rem;				
			}
		}
		.order-time{
			position:relative;
			height:1.875rem;
			p{
				font-size:0.4rem;
				margin-left:0.75rem;
				color:#4a4a4a;
				padding-top:0.19625rem;
			}
			.pay{
				@include a(block,1.875rem,0.6875rem,#62d472,#fff);
				border:1px solid #62d472;
				border-radius:0.178125rem;
				position: absolute;
				top:0.28125rem;
				right:0.3125rem;
				line-height: 0.68rem;
				font-size:0.42875rem;

			}
			.pay.payhide{
				display: none;
			}
		}
	}
	.info-detail{
		background-color:#fff;
		margin-top:0.2125rem;
		margin-bottom:0.2125rem;
		.money{
			border-bottom: 1px solid #e5e5e5;
			height:0.875rem;
			display: flex;
			font-size:0.4275rem;
			color:#4a4a4a;
			margin-left:0.5rem;
			.text{
				width:1.74375rem;
				line-height: 0.859375rem;
			}
			.number{
				line-height: 0.859375rem;
				color:#d02626;				
			}
		}
		.address-detail{
			.item{
				margin-top:0.2525rem;
				display: flex;
				font-size:0.40875rem;
				margin-left:0.725rem;
				color:#5a5959;
				.right{
					max-width:6.25rem;
				}
			}
		}
	}
	.order-icon{
		background-color: #fff;
		.text{
			border-bottom: 1px solid #e5e5e5;
			height:0.875rem;
			display: flex;
			font-size:0.4275rem;
			color:#4a4a4a;
			line-height: 0.87rem;
			margin-left:0.46875rem;
			.right{
				margin-left:0.3125rem;
			}
		}
		.icon{
			.icon-box{
			white-space: nowrap;
			overflow-x: auto;
            overflow-y: hidden;
            position: relative;
				&:after{
					display: block;
					content: '.';
					height: 0;
					visibility: hidden;
					clear: both;
				}
				.item{
					margin-top:0.2125rem;
					margin-bottom:0.2125rem;
					// background:url(../images/1/order-icon.jpg) no-repeat;
					// background-size:100% 100%;
					width:4.578125rem;
					height: 5.359375rem;
					display: inline-block;
					margin-left:0.2rem;
					img{
						width:100%;
						height: 100%;
					}
					&:last-child{
						margin-right:0.235rem;
					}
				}
			}
		}
	}
	.warn-word{
		margin-top:0.3125rem;
		height: 2.03125rem;
		background-color:#fff;
		text-indent: 0.3125rem;
		font-size:0.375rem;
		color:#4a4a4a;
		padding:0.25rem;
	}
}