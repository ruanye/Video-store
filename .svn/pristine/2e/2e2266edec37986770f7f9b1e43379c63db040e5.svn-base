$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";

@charset "UTF-8";
.wrap-page,
body,
html {
    height: 100%
}
body {
    font:12px/1.5 "Microsoft YaHei",tahoma,arial,'Hiragino Sans GB','宋体',sans-serif
}
.page{
    width:100%;
    height: 100%;
}
@font-face {
    font-family: 'sentyn8pregular';
    src: url('fonts/_-webfont.woff2') format('woff2'),
         url('fonts/_-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;

}
.flex{
    display: flex;
}
.logo-icon{
    width:1.546875rem;
    height:1.546875rem;
    position: absolute;
    left:0.703125rem;
    top:0.703125rem;
    img{
        width:100%;
        height: 100%;
    }
}
#page1{
    background: url('../images/page1-bg.png') no-repeat center center;
    background-size:102% 100%;
    .trigon{
        position: absolute;
        height: 5.4rem;
        width:100%;
        top:4.125rem;
        background: url('../images/trigon.png') no-repeat center center;
        background-size:6.265625rem 4.75rem;
        .text{
            color: #fff;
            font-size:0.6rem;
            position:absolute;
            left:50%;
            transform: translate(-50%,0);
            text-align: center;
        }
        .p2{
            font-size:1.1rem;
            top:1.2625rem;
            width:100%;
        }        
        .p3{
            font-size:0.45rem;
            top:2.9rem;
            border:1px solid #fff;
            width:7.65625rem;
            height: 0.8rem;
            line-height: 0.8rem;
            letter-spacing: 0.45625rem;
        }
    }
    .start-button{
        width:5.375rem;
        height: 1.21875rem;
        position: absolute;
        top:10rem;
        transform: translate(-50%,0);
        left:50%;
        button{
            background:url(../images/startBtn.png) no-repeat center center;
            background-size:100% 100%;
            border:none;
            outline: none;
            display: block;
            width:100%;
            height: 100%;
        }
    }
}

.top-icon{
    width:100%;
    img{
        height: 100%;
        width:100%;
    }
}
.select-content{
    font-size:0.47875rem;
    position:relative;
    img{
        width: 100%;
        height: 100%;
    }
    .select-item{
        position:absolute;
        width:50%;
        top:1.1225rem;
        left:1.835rem;
        .left{
            width:0.402344rem;
            height:0.402344rem;
            margin-top:0.098rem;
        }
        .right{
            margin-left:0.3125rem;
        }
    }
    .select-item.active{
        .left{
            background:url(../images/gou.png) no-repeat center center;
            background-size:0.3125rem 0.234375rem;
        }
    }
}
#page2{
}

#page8{
    .top-bg{
        height:10.0rem;
        img{
            width: 100%;
            height: 100%;
        }
    }
    .trigon{
        position: absolute;
        height: 5.4rem;
        width:100%;
        top:4.125rem;
        background: url('../images/trigon.png') no-repeat center center;
        background-size:6.265625rem 4.75rem;
        .text{
            color: #fff;
            font-size:0.6rem;
            position:absolute;
            left:50%;
            transform: translate(-50%,0);
            text-align: center;
        }
        .p2{
            font-size:0.6rem;
            top:1.2625rem;
            width:100%;
        }        
        .p3{
            font-size:0.75rem;
            top:2.5rem;
            border:1px solid #fff;
            width:4.25625rem;
            height: 1rem;
            line-height: 1rem;
            letter-spacing: 0.15625rem;
            text-align:center;
        }
    }
    .content{
        text-align: center;
        .p1{
            margin-top:0.3625rem;
            font-size:0.4rem;
        }        
        .p2{
            font-size:0.5rem;
            color:#5F7771;
        }
        input{
            border:1px solid #5F7771;
            border-radius:0.078125rem;
            display: block;
            width:5.78125rem;
            height: 1.09375rem;
            margin: 0 auto;
            text-align: center;
            font-size:0.5rem;
        }
        button{
            background:#5F7771;
            font-size:0.5rem;
            margin-top:0.25625rem;
            color:#fff;
            padding-left:0.15625rem;
            padding-right:0.15625rem;
            min-width:1.71875rem;
            height: 0.8125rem;
        }
    }
}
#page9{
    background: url(../images/page9-bg.png) no-repeat center center;
    background-size:100% 100%;
    .content{
        padding-top:2.8625rem;
        .rectangle{
            width:7.59375rem;
            height: 6.734375rem;
            border-top:1px solid transparent;
            background: url(../images/rectangle.png) no-repeat center center;
            background-size:100% 100%;
            margin:0 auto;
            .p1{
                text-align: center;
                color:#fff;
                font-size:0.85rem;
                margin-top:1.1rem;
            }            
            .p2{
                text-align: center;
                color:#fff;
                font-size:0.55rem;
            }            
            .p3{
                text-align: center;
                color:#fff;
                font-size:0.55rem;
            }            
            .p4{
                text-align: center;
                color:#fff;
                font-size:0.55rem;
            }
        }
        .share-btn{
            margin-top:1rem;
            button{
                display: block;
                margin: 0 auto;
                border:none;
                outline: none;
                width:5.375rem;
                height: 1.21875rem;
                background:url(../images/share-btn.png) no-repeat center center;
                background-size:100% 100%;
            }
        }
    }
}
#page10{
    .no-register{
        position:absolute;
        left:50%;
        transform: translate(-50%,0);
        width:8.125rem;
        height: 1.5625rem;
        top:3rem;
        background: #fff;
        border-radius:0.15625rem;
        overflow: hidden;
        button{
            width:100%;
            height: 100%;
            background: #fff;
            color:#000;
            font-size:0.5rem;
        }
    }
    .content{
        .p1{
            margin-left:1.0625rem;
            font-size:0.45rem;
        }
        .p2{
            width:8.015625rem;
            height: 5.484375rem;
            margin-left:1.0625rem;
            margin-top:0.1625rem;
            background:url(../images/share-icon.png) no-repeat center center;
            background-size:100%;
        }
    }
}
#page11{
    background:url(../images/page11-bg.png) no-repeat center center;
    background-size:100% 100%;   
    .title{
        position:absolute;
        text-align: center;
        color:#fff;
    } 
    .title1{
        top:4.125rem;
        font-size:0.7rem;
        width:100%;
    }    
    .title2{
        top:5.825rem;
        font-size:0.45rem;
        width:4.6875rem;
        height: 0.875rem;
        background:#fff;
        color:#000;
        line-height:0.875rem;
        left:50%;
        margin-left:-2.34rem;
        border-radius:0.15625rem;
    }
    .shake{
        position:absolute;
        top:7rem;
        left:50%;
        transform: translate(-50%,0);
        width: 1.71875rem;
        height: 5.046875rem;
        img{
            width:100%;
            height: 100%;
        }
    }
}