$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #2c51be;
$width: 10rem;
$placeholdercolor:#e1e1e1;
::-webkit-input-placeholder {
    color: $placeholdercolor
}
:-moz-placeholder {
    color: $placeholdercolor
}
::-moz-placeholder {
    color: $placeholdercolor
}
:-ms-input-placeholder {
    color: $placeholdercolor

}
.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    height: 100%;
   position: relative;
 
}
.page1{
      background: url('../images/bg1.png ') #76d2ef no-repeat  0 0.875rem ;
   background-size: 9.734375rem 16.625rem;
}
.page2{
      background: url('../images/bg2.png ') #f1f1f1 no-repeat  0 0.875rem ;
   background-size:10rem 17.8125rem ;
}
.page3{
      background:#f1f1f1;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
.imgbox{
    position: absolute;
    bottom: 0;
    width: 10rem;
    height: 2.3125rem;
    img{
        width: 9.125rem;
        height: 2.3125rem
    }
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.bottom{
    position: absolute;
    bottom: 0;
    height:2.765625rem;
    width:$width;
    img{
        width:9.3125rem;
        height:2.765625rem
    }

}
.titletext{
    img{
        margin-top: 7.40625rem;
        width:4.375rem;
        height:1.15625rem;
    }
}
.text2{
      height:1.484375rem;
    img{
        width:4.140625rem;
        height:1.484375rem;
        margin-top: 0.625rem;
    }
}
.btnbox{
    height:2.1875rem;
    margin-top: 0.625rem;
    img{
        width:5.5625rem;
        height:2.1875rem
    }
}
.intext{
    padding-top: 8.0625rem;
    color: #fff;
    font-size: 0.5rem;
    &.a{
       color: #1ea5a4;
          
    } 
    &.b{
       
      span{
        width:8.125rem;
        height:2.0rem;
        line-height: 1.0rem;
        color: #fff;
        border-radius:0.234375rem;
        border: 2px solid #21a5aa;
        background-color: #757498;
        box-shadow: 0 0 0 0.0625rem #757498
      }   
    }
    span{
       color: #1ea5a4;  
    }
}
.inputbox{
   
    padding-top: 6.25rem;
    height:auto;
    input{
        width:8.6875rem;
        height:1.65625rem;
        text-align:center;
        font-size: 0.9375rem;
        border: 3px solid #d73102;
        border-radius: 0.234375rem;
    }
}
.share-btn,#share-btn,#sava-btn{
    width:3.65625rem;
    height:1.59375rem;
    line-height: 1.59375rem;
    background-color: #d73102;
    color: #fff;
    font-size: 0.90625rem;
     border-radius: 0.234375rem;
}
.yhj{
    width:4.546875rem;
    height:1.734375rem;
    margin-top: 0.15625rem;
}
.share-btn{
    margin-top: 1.5625rem;
}
.shuxian{
    margin: 0 auto;
    width: 0.0625rem;
    height:2.71875rem;
    background-color: red
}
.mask{
    position: absolute;
    top: 0;
    width:10.0rem;
    height: 100%;
    z-index: 2000
}
.ig3{

    img{
    margin-top: 2.140625rem;
    width: 8.5rem;
    height: 9.5rem
    }
    
}
.endtext{
    span{
        margin-top: 0.546875rem;
        color: #76d2ef;
        font-size: 0.625rem;
    }
    font-size: 0.46875rem;
}