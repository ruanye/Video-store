$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@charset "UTF-8";

.container {
    width: 1170px;
    padding: 15px 15px 15px 0px;
    margin:100px auto;
    border:1px solid #ffffff;
    -webkit-box-shadow:0 0 10px #e2e2e2;
    -moz-box-shadow:0 0 10px #e2e2e2;
    box-shadow:0 0 10px #e2e2e2;
    background:#ffffff;
    a{
        text-decoration: none;
    }
    >.top{
        margin: 0px 20px 20px 20px;
        text-align: right;
        height: 35px;
        position: relative;
        >.btn{
            display: inline-block;
            padding: 0px 10px;
            line-height: 35px;
            font-size: 16px;
            margin-left:10px;
            width: 110px;
            background-color: rgb(210,0,20);
            border-radius: 3px;
            text-align: center;
            cursor: pointer;
            position: absolute;
            &:hover{
            }
            >a{
                color: #FFF;
            }
            &.back{
                background-color: rgb(185,185,185);
                left: 0;
            }
            &:hover{
                background:#de0313;
            }
            &.close{
                right:0;
            }
        }
        &:after{
            content: '';
            display: block;
            height: 0;
            clear: both
        }

    }
    >.left{
        float: left;
        width: 360px;
        >.qr{
            margin: 0px auto;
            height: 300px;
            width: 300px;
        }
        >.text{
            margin-top: 25px;
            height: 42px;
            line-height: 42px;
            text-align: center;
            font-size: 42px;
        }
    }
    >.right{
        float: right;
        width: 808px;
        >.items{
            padding: 30px 10px;
            border: 1px solid #CCC;
            >.item{
                margin-top: 20px;
                position: relative;
                &:first-child{
                    margin-top: 0px;
                }
                >.left{
                    float: left;
                    width: 85%;
                    >.content{
                        font-size: 14px;
                    }
                    >.answer{
                        padding: 10px 0px 0px 0px;
                        font-size: 12px;
                        >.item{
                            float: left;
                            width: 30%;
                            margin-left: 30px;
                            overflow: hidden;
                            line-height: 25px;
                            height: 25px;
                            text-overflow: ellipsis;
                            white-space:nowrap;
                        }
                    }
                    >.progress{
                        height: 20px;
                        background: #f3f3f3;
                        border: 1px solid #CCC;
                        border-radius: 3px;
                        background-color: #FFF;
                        margin-left: 20px;
                        position: relative;
                        width: 90%;
                        >.percent{
                            height: 22px;
                            background: #f50;
                            border-radius: 3px;
                            position: relative;
                            top: -1px;
                            left:0px;
                            width: 0px;
                            transition: all 0.3s;
                            // width: 20%;
                        }
                        >.text{
                            width: 50px;
                            height: 22px;
                            line-height: 22px;
                            position: absolute;
                            right: -60px;
                            bottom: 0px;
                        }
                    }
                }
                >.right{
                    float: right;
                    width: 15%;
                    text-align: center;
                    >.result{
                        position: absolute;
                        bottom: 0px;
                        right: 15px;
                        // background-color: red;
                        height: 25px;
                        line-height: 26px;
                        font-size: 14px;
                        width: 85px;
                        border-radius: 3px;
                        color: rgb(3,33,84);
                        border: 1px solid rgb(3,33,84);
                        margin: 0px auto;
                        cursor: pointer;
                        &:hover{
                           border: 1px solid #de1313;
                        }
                        &:hover a{
                           color: #de1313;
                        }
                        >a{
                            color: rgb(3,33,84);
                        }
                    }
                }
            }
        }
        >.result-all{
            margin: 20px auto;
            height: 60px;
            line-height: 60px;
            font-size: 26px;
            width: 370px;
            background-color: rgb(0,55,100);
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            &:hover{
            }
            >a{
                color: #FFF;
            }
        }
    }
}
