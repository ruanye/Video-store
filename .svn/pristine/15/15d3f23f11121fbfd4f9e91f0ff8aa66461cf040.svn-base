@import "tobe/function";
@import "base";
.toleft{position:relative;left: -20%;}
        
.leftline{border-left:1px solid #aaaaaa;padding-left:4px;}
.leftline2{border-left: 3px solid #a6ce38;padding-left:4px;}
.topline{border-top:1px solid #f2f1f7;}
.padding_10{padding-top:10px;padding-bottom:10px;}
.font_msg{color:#7f7f7f;}
.font_money{color:#cc0000;}

.item-inner{padding-left: .75rem !important;}
.bottomline{border-bottom:1px solid #e5e5e5;padding-left:4px;}
.padding20{padding-bottom:26px !important;margin-top:-10px;}
ul{background:#f2f1f7 !important;}
ul>li{background:#ffffff !important;}
.item-inner2 {
    padding-left: .75rem;
    padding-right: .75rem;
    position: relative;
    width: 100%;
    padding-top: .3rem;
    padding-bottom: .3rem;
    min-height: 1.3rem;
    font-size: .65rem;
    overflow: hidden;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    .item-title,.item-after,input[type=text]{
        font-size: .75rem;
    }
    .item-title{
        margin-left:0.78125rem;
    }
    .item-input{
        width:55%!important;
    }
    .doubt{
        width:15px;
        height: 15px;
        background:url(../images/doubt.png) no-repeat center center;
        background-size:100% 100%;
    }
}

.item-input.input-border{
    input{
        border:1px solid #ddd!important;
        height: 1.7rem!important;
    }
    padding-right:10px;
}
.coupon-slide{
    position:absolute;
    width:100%;
    height: 35%;
    bottom:0;
    background:#eee;
    animation:slideUp 0.2s linear;
    display: none;
    z-index: 11111;
    color:#000;
    text-align: center;
}
@keyframes slideUp{
    0%{
        transform: translate3d(0,100%,0)
    }    
    100%{
        transform: translate3d(0,0,0)
    }
}