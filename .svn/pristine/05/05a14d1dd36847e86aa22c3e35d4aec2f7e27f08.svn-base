@import "tobe/function";
@mixin font-dpr($fonts-size) {
    font-size: $fonts-size;
    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }
    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
    margin: 0;
    padding: 0;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-appearance: none;
    font-family: "Microsoft YaHei",tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}

button {
    border: none;
}

button:focus {
    outline: none;
}

html,
body {
    height: 100%;
}

.wrap-page {
    height: 100%;
    background-origin: content-box;
    -webkit-background-origin: content-box;
    -webkit-overflow-scrolling: touch;
    background: #fff;
    text-align: center;
    max-width: 760px;
    width: 100%;
    margin: auto;
}

.page {
    margin:0 auto;
    min-height: 100%;
    width: 100%;
    display: flex;
    background:url(../images/bg_bottom.png) center  bottom no-repeat;
    background-size:100% auto;
    @include flex-direction;
}

.row:after,
.row:before {
    display: table;
    content: " ";
    clear: both;
}

.flex-box {
    display: flex;
}

.flex-1 {
    flex: 1;
}

.flex-m {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: flex;
}

.flex-d {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: flex-end;
    align-items: flex-end;
    display: flex;
}

input::-webkit-input-placeholder, textarea::-webkit-input-placeholde{
　color:#a5a5a5;
text-align:center;
}
input:-moz-placeholder, textarea:-moz-placeholder {
　color:#a5a5a5;
}
input::-moz-placeholder, textarea::-moz-placeholder {
　color:#a5a5a5;
}
input:-ms-input-placeholder, textarea:-ms-input-placeholder {
　color:#a5a5a5;
}

.wrap-page .header{
    width:5.75rem;
    height:1.1875rem;
    margin: 1.015625rem auto;
    background:url(../images/header.png) no-repeat;
    background-size:100% 100%;
}
.btn{
    position: relative;
    width:4.9375rem;
    height:0.90625rem;
    margin:1.015625rem auto;
    background: #cb2e1c;
    text-align: center;
    font-size:0.375rem;
    color: #ffffff;
    font-weight: normal;
    display: block;
    z-index: 1;
    &:before {
        position: absolute;
        top: -6px;
        right: -6px;
        content: "";
        border-top:2px dotted #000000;
        border-right:2px dotted #000000;
        width: 4.9375rem;
        height: 1rem;
        display: block;
        z-index: 3;
        }
    &:after {
        position: absolute;
        top: -2px;
        right: -2px;
        content: "";
        border-top:2px dotted #000000;
        border-right:2px dotted #000000;
        width: 4.9375rem;
        height: .9rem;
        display: block;
        z-index: 3;
    }
}
.content{
    position:relative;
    width:8.984375rem;
    height:6.0625rem;
    margin: 0 auto;
    .bag_icon{
        position: absolute;
        width:0.890625rem;
        height:2.078125rem;
        background:url(../images/bg_icon.png) center no-repeat;
        background-size:100% 100%;
    }
    #bag_icon1{
        top:0.15625rem;
        left:0.3125rem;
    }
    #bag_icon2{
        right:0.3125rem;
        bottom:-0.515625rem;
    }
}

#page1{
    .content{
        background:url(../images/bag_bg1.png) center no-repeat;
        background-size:100% 100%;
    }
}

#page2{
    .content{
        background:url(../images/bag_bg2.png) center no-repeat;
        background-size:100% 100%;
        img{
            display:block;
            margin:0.625rem auto;
            width:4.03125rem;
            height:2.875rem;
        }
        input{
            width:4.03125rem;
            height:0.625rem;
            margin: 0 auto;
            background-color: #fff;
            text-align:center;
            outline:none;
            border:none;
            font-size:0.375rem;
            color:#cb2e1c;
        }
        p{
            width:4.03125rem;
            margin:0 auto;
            color:#a5a5a5;
            font-size:0.28125rem;
        }
        #errorInfo{
            color:red;
        }
    }
}

#page3{
    .content{
        background:url(../images/bag_bg2.png) center no-repeat;
        background-size:100% 100%;
        p{
            font-size:0.75rem;
            color:#cb2e1c;
            span{
                color:#f5d029;
            }
        }
    }
    #btn3{
        height:1.3125rem;
    }
}



//动画
.fadeInDownBig{
-webkit-animation:fadeInDownBig 1s .1s ease both;
-moz-animation:fadeInDownBig 1s .1s ease both;}
@-webkit-keyframes fadeInDownBig{
0%{opacity:0;
-webkit-transform:translateY(-2000px)}
100%{opacity:1;
-webkit-transform:translateY(0)}
}
@-moz-keyframes fadeInDownBig{
0%{opacity:0;
-moz-transform:translateY(-2000px)}
100%{opacity:1;
-moz-transform:translateY(0)}
}

.shake{
-webkit-animation:shake 1s 1.2s ease both;
-moz-animation:shake 1s 1.2s ease both;}
@-webkit-keyframes shake{
0%,100%{-webkit-transform:translateX(0);}
10%,30%,50%,70%, 90%{-webkit-transform:translateX(-10px);}
20%,40%,60%,80%{-webkit-transform:translateX(10px);}
}
@-moz-keyframes shake{
0%,100%{-moz-transform:translateX(0);}
10%,30%,50%,70%, 90%{-moz-transform:translateX(-10px);}
20%,40%,60%,80%{-moz-transform:translateX(10px);}
}
.rotateIn{
-webkit-animation:rotateIn 2s .2s ease both;
-moz-animation:rotateIn 2s .2s ease both;}
@-webkit-keyframes rotateIn{
0%{-webkit-transform-origin:center center;
-webkit-transform:rotate(-200deg);
opacity:0}
100%{-webkit-transform-origin:center center;
-webkit-transform:rotate(0);
opacity:1}
}
@-moz-keyframes rotateIn{
0%{-moz-transform-origin:center center;
-moz-transform:rotate(-200deg);
opacity:0}
100%{-moz-transform-origin:center center;
-moz-transform:rotate(0);
opacity:1}
}
