}
//切换页
function togglePage( pageIndex ){
  $(".page").removeClass("active");
	$(".mask").removeClass("active");
  $(".page"+pageIndex).addClass("active");
}
//切换遮罩
function toggleMask( maskIndex ){
  $(".mask").removeClass("active");
  $(".mask"+maskIndex).addClass("active");
}


$('.page1 .btn.get').on("click",function(){
	var phone = $('.page1 .input.phone').val();
  if(!/^\d{11}$/.test(phone)){
    alert('手机号格式错误');
    return;
  }
	//console.log(phone);
  $('.page1 .btn.get').html("领取中...");
  $.post('/onecoupon/save/'+REQUEST.id+'-'+phone,function(data){
    $('.page1 .btn.get').html("领取乘车礼包");
    if( data.status != 1){
      alert(data.messsage);
      return;
    }
		window.localStorage.setItem('phone',phone);
    if(data.robstatus == 1){
      togglePage('Reg');
    }else{
      togglePage('Result');
    }
    //console.log(data);
  });
});


