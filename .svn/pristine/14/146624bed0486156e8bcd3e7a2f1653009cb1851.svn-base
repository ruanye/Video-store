$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";

@charset "UTF-8";
.wrap-page,
body,
html {
    height: 100%
}
body {
    font:12px/1.5 "Microsoft YaHei",tahoma,arial,'Hiragino Sans GB','宋体',sans-serif
}
.page{
    width:100%;
    height: 100%;
    overflow: hidden;
    position:relative;
}
.flex{
    display: flex;
}
.top-title{
	background-color:#11357C;
	height:0.875rem;
	line-height:0.875rem;
	text-align:center;
	color:#fff;
	font-size:0.41875rem;
}
@keyframes rotate{
	0%{
		transform:rotate(0deg)
	}	
	100%{
		transform:rotate(30deg)
	}
}

@keyframes leftRight{
	0%{
		transform:translate(0.46875rem,0)
	}		
	50%{
		transform:translate(0.46875rem,0)
	}	
	100%{
		transform:translate(-0.46875rem,0)
	}

}
#page1{
	background:url(../images/page1-bg.png) no-repeat center center;
	background-size:100% 100%;
	.icon-1{
		padding-top:0.9125rem;
		img{
			width:95%;
			height: 100%;
			display: block;
			margin: 0 auto;
		}
	}
	.icon-2,.icon-3{
		img{
			width:4.84375rem;
			height: 0.625rem;
			display: block;
			margin: 0 auto;
		}		
	}
	.icon-2{
		margin-top:0.3125rem;
	}
	.icon-3{
		margin-top:0.36875rem;
	}
	.click{
		display: block;
		position:absolute;
		width:100%;
		height: 1.25rem;
		background-color:transparent;
		font-size:1.1rem;
		text-align: center;
		color:#623e0a;
		bottom:1.88125rem;
		font-weight: 600;
	}
}
#page2{
	background:url(../images/page2-bg.jpg) no-repeat center center;
	background-size:100% 100%;
	.text{
		display: block;
		width:100%;
		position:absolute;
		bottom:4.18125rem;	
		text-align: center;
		color:#623e0a;
		font-size:0.85rem;
	}
	#errorInfo{
		position:absolute;
		width:2.90625rem;
		height:0.346875rem;
		bottom:2.48125rem;	
		left:50%;
		transform: translate(-50%,0)		
	}
	.tel-btn{
		display: block;
		position:absolute;
		width:2.90625rem;
		height:1.046875rem;
		bottom:1.08125rem;	
		background:url(../images/btn-sure.png) no-repeat center center;
		background-size:100% 100%;
		left:50%;
		transform: translate(-50%,0)
	}
	.inputTel{
		display: block;
		position:absolute;
		bottom:2.9125rem;
		background:#fff;
		width:5.86875rem;
		height: 1.05rem;
		left:50%;
		transform: translate(-50%,0);	
		.outline{
			border:1.8px dashed #b86400;
			width:5.46875rem;
			height: 0.75rem;
			margin:0.13125rem auto;
			input{
				text-align: center;
				display: block;
				outline: none;	
				border:none;
				width:100%;
				height: 100%;
			    outline:medium;
				font-size:0.45875rem;
			}
		}
	}
}

#page3{
	background:url(../images/page3-bg.jpg) no-repeat center center;
	background-size:100% 100%;
	.content{
		position:relative;
		margin-top:1.0625rem;
		background:url(../images/xin.png) no-repeat center center;
		background-size:8.046875rem 12.5rem;
		width:100%;
		height: 12.5rem;
		.icon-1{
			width:5.5625rem;
			margin:0 auto;
			padding-top:3.125rem;
			img{
				width:100%;
				height: 100%;
			}
		}
		.icon-2{
			width:6.5rem;
			margin:0 auto;
			padding-top:0.525rem;
			img{
				width:100%;
				height: 100%;
			}			
		}
		.icon-3,.icon-4{
			width:4.296875rem;
			height: 1.59375rem;
			margin: 0.2125rem auto;
			img{
				width:100%;
				height: 100%;
			}
		}
		.text{
			font-size:0.1875rem;
			text-align: center;
		}
		.share-btn{
			position:absolute;
			width:3.28125rem;
			height: 0.609375rem;
			left:50%;
			bottom:0.46875rem;
			transform: translate(-50%,0);
			background:url(../images/sharen-btn.png) no-repeat center center;
			background-size:100% 100%;
		}
	}
}
#page4{
	background:rgba(0,0,0,0.6);
	.pointer{
		width:2.625rem;
		height: 2.90625rem;
		background:url(../images/pointer.png) no-repeat center center;
		background-size:100% 100%;
		position:absolute;
		right:0;
	}
}