$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@mixin font-dpr($fonts-size) {
    font-size: $fonts-size;
    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }
    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}
@charset "UTF-8";
.wrap-page,
body,
html {
    height: 100%
}
body {
    font:12px/1.5 "Microsoft YaHei",tahoma,arial,'Hiragino Sans GB','宋体',sans-serif
}
.wrap-page {
  height: 100%;
  background-origin: content-box;
  -webkit-background-origin: content-box;
  -webkit-overflow-scrolling: touch;
  background: #FFFFFF;
  background-size: 100% auto;
  text-align: center;
  max-width: 760px;
  width: 100%;
  margin: auto;
}

.page {
  min-height: 100%;
  width: 100%;
  display: flex;
  @include flex-direction;
}

.inner {
  width: 100%;
}

.flex{
    display: flex;
}
.top-title{
  background-color:#11357C;
  height:0.875rem;
  line-height:0.875rem;
  text-align:center;
  color:#fff;
  font-size:0.41875rem;
}

.flex-box{display: flex;}
.flex-1{flex: 1;width: 100%;}
.flex-m{-webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: flex;
  }
.flex-d{-webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: flex-end;
    align-items: flex-end;
    display: flex;
  }
button{
  outline: none;
}

  .uber{
    @include font-dpr(18px);
    color: #fff;
    letter-spacing: 0.15625rem;
    margin-top: 0.3125rem;
  }
#indexPage{
  background: #2CBAC1;
  .index{
    width: 8.021875rem;
    height: auto;
  }
  .goBtn{
    width: 7.21875rem;
    height: 2.0625rem;
    padding-bottom: 0.125rem;
    margin-top: 0.15625rem;
    background: url(../images/btn1.png) no-repeat center center;
    background-size: 85% auto;
    @include font-dpr(24px);
    color: #fff;
    letter-spacing: 0.078125rem;
    font-weight: bold;
  }
}
#enterPage{
  background: #2CBAC1;
  .content{
    width: 8.284375rem;
    height: 15.70625rem;
    margin: 0 auto;
    background: url(../images/bg1.png) no-repeat center center;
    background-size: 100% auto;
    .panda{
      width: 3.4375rem;
      height: auto;
      margin-left: 2.68125rem;
    }
    .btn{
      position: relative;
      &:nth-of-type(2){
        margin-top: 0.3125rem;
      };
      .newBtn{
        width: 7.0rem;
        height: 3.690625rem;
        @include font-dpr(30px);
        font-weight: bolder;
        color: #CF0006;
        background: url(../images/btn2.png) no-repeat center center;
        background-size: 96% auto;
      }
      .oldBtn{
        @extend .newBtn;
      }
      .arrowL{
        width: 1.5625rem;
        height: auto;
        position: absolute;
        top: -1.16875rem;
        left: 1.9125rem;
      }
      .arrowR{
        @extend .arrowL;
        left: 2.9125rem;
      }
    }
  }
}
#phonePage{
  @extend #enterPage;
}



/*动画*/
.shake{
-webkit-animation:shake .8s 0s ease both;
-moz-animation:shake .8s 0s ease both;}
@-webkit-keyframes shake{
0%,100%{-webkit-transform:translateX(0);}
10%,30%,50%,70%, 90%{-webkit-transform:translateX(-3px);}
20%,40%,60%,80%{-webkit-transform:translateX(3px);}
}
@-moz-keyframes shake{
0%,100%{-moz-transform:translateX(0);}
10%,30%,50%,70%, 90%{-moz-transform:translateX(-3px);}
20%,40%,60%,80%{-moz-transform:translateX(3px);}
}
.shake2{
-webkit-animation:shake .8s 0.8s ease both;
-moz-animation:shake .8s 0.8s ease both;}
@-webkit-keyframes shake{
0%,100%{-webkit-transform:translateX(0);}
10%,30%,50%,70%, 90%{-webkit-transform:translateX(-3px);}
20%,40%,60%,80%{-webkit-transform:translateX(3px);}
}
@-moz-keyframes shake{
0%,100%{-moz-transform:translateX(0);}
10%,30%,50%,70%, 90%{-moz-transform:translateX(-3px);}
20%,40%,60%,80%{-moz-transform:translateX(3px);}
}