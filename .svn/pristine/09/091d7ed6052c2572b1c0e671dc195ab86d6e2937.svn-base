$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
  -webkit-tap-highlight-color:rgba(0,0,0,0);
}
.wrap-page { 
      .nav-bar{
      display: flex;
      justify-content: center;
      border-bottom:1px solid #dcdcdc;
      border-top:1px solid #dcdcdc;
      position:absolute;
      height:1.375rem;
      width:100%;
      background:#fff;
      z-index: 11;
      transform:translateZ(0px);
       -webkit-transform:translateZ(0px);
      .nav-bar-detail{
        margin-top: 0.3125rem;
        text-align: center;
        font-size:0.475rem;
        width:50%;
        height: 0.6875rem;
        line-height: 0.6875rem;
        
      }
      .nav-bar-detail.active{
        height:1.0525rem;
        color:#5BE364;
        border-bottom: 0.045125rem solid #5BE364;
      }
      .nav-bar-2 {
        border-left : 1px solid #dcdcdc;
      }
    }

    .detail-tab.active{
      display: block;
      z-index: 1;
    }
    .detail-tab{
      width:100%;
      position: absolute;
      display: none;
      margin-top:1.55rem;
      .order-box{
        width: 100%;
        height: 4.3625rem;
        margin-bottom: 0.15625rem;
        background-color : #fff;
        // border-bottom : 1px solid #dcdcdc;
        .order-title{
          position: relative;
          // height: 1.54375rem;
          min-height: 1.2rem;
          margin-left: 0.625rem;
          border-bottom: 1px solid #dcdcdc;
          .order-status{
            padding-top: 0.2rem;
            font-size:0.4rem;
          }
          .order-price{
            padding-top: 0.1rem;
            padding-bottom: 0.15rem;
            font-size:0.405rem;
            span{
              color: #d65b5b;
            }
          }
          .order-btn{
            position: absolute;
            top : 25%;
            right: 0.375rem;
            display: none;
          }          
          .order-btn.show{
            display:block;
          }
          .btn-warning{
            color:#5BE364;
            text-align: center;
            line-height: 0.65625rem;
            width: 1.9375rem;
            height: 0.65625rem;
            border : 1px solid #5BE364;
            border-radius:5px 5px 5px 5px;
          }
          .btn-wait{
            color: #d65b5b;
          }
        }
        .order-content{
          display: flex;
          position: relative;
          height: 2.5625rem;
          margin-left: 0.625rem;
          .content-left{
            padding-top: 0.1875rem;
            width: 2.5625rem;
            img{
              width: 1.6875rem;
              height: 2.0rem;
            }
          }
          .content-right{
            width: 7.625rem;
            .content-txt{
              padding-top: 0.375rem;
              font-size:0.4rem;
              span{
                padding-left:0.3125rem;
                padding-right : 0.3125rem;
              }
            }
          }
        }
      }
    }
  
}



