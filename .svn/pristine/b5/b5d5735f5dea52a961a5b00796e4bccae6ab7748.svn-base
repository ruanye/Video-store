 $gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body{
    background-color: #f3f3f3;
}

 .allcontainer{
        width: 10.0rem;
        margin: 0 auto;
        height: 100%;
       background-color: #f3f3f3;
}
    .swiper-container {
        width: 100%;
        height: 5.1875rem;
        margin: 0 auto;
    }
    .swiper-slide {
        width: 100%!important;
        height: 5.1875rem;
        overflow-y: hidden;
       img{
            width: 100%;
            height:  5.1875rem;
        }
    }
    .weui_panel{
        background-color: #fff;
    border-top: 1px solid #c7c7c7;
    border-bottom: 1px solid #c7c7c7;
    .text1{
        font-size: 0.40625rem;
        color: #403f3f;
        line-height: 2;
        margin-left: 22px;
        padding: 2px 0;
        b{
            color: #575757;
          
        }
        span{
            font-size: 0.375rem;
            color: #6f6f6f;

        }
    }
   .text2{
    border-top: 1px solid #dcdcdc;
    font-size: 0.375rem;
    color: #6b6b6b;
     margin-left: 22px;
    padding-top: 0.3125rem;
    padding-bottom: 0.15625rem;
    line-height:0.5625rem;
    padding-right: 0.3125rem;
   
   }
}
.price{
    background-color: #fff;
    margin-top: 14px;
    border-top: 1px solid  #dcdcdc;
    padding-bottom:0.15625rem;
    p{
        margin-left: 0.6875rem;
        line-height: 1.03125rem;
        text-indent: 10px;
        color: #6d6d6d;
         font-size: 0.40625rem;
        &.money{
            color: #c00;
           

        }
        &.kucun,&.money,&.guige{
            border-bottom: 1px solid #dcdcdc;
        }
    }
    
}
.xiangqing{
    border-bottom: 1px solid #dcdcdc;
    background-color: #fff;
    padding-left: 0.4rem;
    margin-top: 0.3125rem;
    margin-bottom:2rem ;
    padding-top: 0.15625rem;
    padding-bottom: 0.15625rem;
    padding-right: 0.4rem;

    img{
        display:block;
        margin: 0 auto;
        max-width: 100% !important;
        height:auto;
    }
}
.bottom{
    position: fixed;
    bottom: 0;
    width: 10rem;
    height: 1.453125rem;
    background-color: #fff;
    overflow: hidden;
    clear: both;
    border-top: 1px solid #dcdcdc;
  .add,.buy{
       float: left;
        text-align: center;
        height: 1.453125rem;
        line-height:  1.453125rem;
        font-size: 0.46875rem;
    }
    .add{
        width: 6.453125rem;
        color: #000;

    }
    .buy{
     width: 3.546875rem;
     background-color: #40b952;
     color: #fff;
    }
}
 .mynum {
     border-bottom: 1px solid #c9c9c9;
     border-top: 1px solid #c9c9c9;
     width:3rem;
     clear: both;
     overflow: hidden;
     text-align: left;
     height: 0.8rem;
     margin: 0.15625rem 0  0.3125rem 1.9375rem;
      span {
         @include inline-block;
         width: 1rem;
         height: 0.8rem;
         line-height: 0.8rem;
         text-align: center;
     }
     span {
         float: left;
         background-color: #c9c9c9;
         color: #585858;
         font-size: 0.40625rem;
         
     }
     .num {
            float: left;
            width:1rem;
             box-sizing: border-box;

             height: 0.8rem;
             background-color: #fff;
             font-size: 0.3125rem;
             border: none;
             text-align: center;
         }
 }
 @font-face {font-family: 'iconfont';
    src: url('fonts/iconfont/iconfont.eot'); /* IE9*/
    src: url('fonts/iconfont/iconfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('fonts/iconfont/iconfont.woff') format('woff'), /* chrome、firefox */
    url('fonts/iconfont/iconfont.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('fonts/iconfont/iconfont.svg#iconfont') format('svg'); /* iOS 4.1- */
}
.iconfont{
    font-family:"iconfont" !important;
    font-size:16px;font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}
.shopcaricon{
  color:#e05050;width:0.59375rem;height:0.5625rem;margin-right:0.15625rem;vertical-align:top;
}
.myshuliang{
   position: absolute;
   left:0.9375rem;
    background-color:#fff!important;
    
}