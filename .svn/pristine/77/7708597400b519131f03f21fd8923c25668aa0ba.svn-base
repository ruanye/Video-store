$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
.wrap-page{
	.info-icon{
		display: flex;
		padding-top:0.3125rem;
		padding-bottom:0.3125rem;
		border-bottom: 1px solid #e2e2e2;
		.head-icon{
			margin-left:0.3125rem;
			width:2.890625rem;
			height:2.890625rem;
			// background:url(../images/1/head-icon.png) no-repeat;
			background-repeat:no-repeat;
			background-position:center center;
			background-size:2.34375rem 3.125rem;
		}
		.info{
			margin-left:0.46875rem;
			.flex{
				display: flex;
			}
			.name{
				font-size:0.46rem;
				color:#565656;//696969
				margin-top:0.12625rem;
			}
			.job,.where,.charge{
				font-size:0.37rem;
				color:#b9b9b9;
				margin-top:0.10625rem;
			}
			
		}
	}
	.info-content{
		padding-bottom:0.78125rem;
		.nav-bar{
			display: flex;
			border-bottom:1px solid #e2e2e2;
			.left,.right{
				width:50%;
				text-align:center;
				font-size:0.46875rem;
				color:#565656;
				height: 1.15625rem;
				line-height: 1.15625rem;
			}
			.left.active,.right.active{
				color:#57cf69;
				border-bottom:2px solid #57cf69
			}
		}
		.nav-content{
			.experience,.doctor-info{
				display: none;
			}
			.experience.active,.doctor-info.active{
				display: block
			}
			.experience .item{
				display: flex;
				// height:1.09375rem;
				.select-icon{
					width:0.28125rem;
					height: 0.28125rem;
					border:1px solid #c5c5c5;
					border-radius:50%;
					margin-top:0.390625rem;
					margin-left:0.46875rem;
				}
				.select-icon.active{
					width:0.344rem;
					height: 0.344rem;
					background:url(../images/1/select.png) no-repeat;
					background-size:100% 100%;
					border:none;
				}
				.date{
					font-size:0.4375rem;
					margin-top:0.26875rem;
					// width:80%;
					text-align:left;
					margin-left: 0.234375rem;
					margin-right: 0.234375rem;
				}
			}
			.doctor-info{
				padding-bottom:1.40625rem;
				padding:0.4rem;
				img{
                    width:100% !important;
                    display: block;
                    margin: 0.078125rem auto;	
				}
			}
		}
	}
	.bottom-btn{
		position: fixed;
		width:100%;
		bottom:0;
		height:1.875rem;
		background-color:#fff;
		.order{
			@include a(block,5.625rem,1.125rem,#fff,#57cf69)
			font-size:0.46875rem;
			line-height: 1.125rem;
			margin:0.390625rem auto 0;
			border-radius:0.138125rem;
		}
	}
}