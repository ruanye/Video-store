$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
#takeInNumber{
	text-align:center;
}
.wrap-page {
	position:absolute;
	width:100%;
	top:1.3375rem;
	bottom:0;
	.container{
		position:absolute;
		left:0;
		right:0;
		top:0;
		bottom:0;
		.detail-content{
			display: flex;
			padding-top:0.3125rem;
			background-color:#fff;
			border-bottom: 1px solid #dcdcdc;
			padding-bottom:0.25625rem;
			.left{
				margin-left:0.3125rem;
				width:25%;
				height:2.09375rem;
				// background:url(../images/1/list-icon.jpg) no-repeat center center;
				background-repeat:no-repeat;
				background-position:center center;
				background-size:2.0625rem 2.0625rem;
			}
			.right{
				width:75%;
				p{
					font-size:0.40625rem;
					margin-left:0.3125rem;
					color:#7e7e7e;
				}
				.p3{
					margin-top:0.15625rem;
					span{
						color:#cc0000;
					}
				}
			}
		}
		.person-detail{
			color:#6b6b6b;
			margin-top:0.3125rem;
			background:#fff;
			border-top:1px solid #dcdcdc;
			.flex{
				display: flex;
				height: 1.25rem;
				font-size:0.4375rem;
				border-bottom: 1px solid #dcdcdc;
				.number{
					width:50%;
					height: 100%;
					line-height:1.09375rem;
					text-align:right;
					margin-right:0.46875rem;
					overflow:hidden;
					input{
						display: block;
						outline: none;
						width:100%;
						height: 100%;
						border:none;
						text-align: right;
					}
				}
				.text{
					height: 100%;
					width:50%;
					line-height:1.09375rem;
					margin-left:0.46875rem;
				}
			}
			.people{
				.number{
					.circle{
						height:0.625rem;
						line-height: 0.625rem;
						width:1.25rem;
						text-align:center;
						margin-top:0.234375rem;
						float:right;
						margin-right:0.1rem;
						input{
							border:1px solid #dcdcdc;
							border-radius:0.09375rem;
						}
						
					}
				}
			}
		}
		.sure{
			position:absolute;
			display: none;
			z-index: 11;
			height:1.40625rem;
			display: flex;
			bottom:0;
			width:100%;
			.left{
				width:65%;
				line-height: 1.40625rem;
				font-size:0.46875rem;
				text-align: center;
				border-top:1px solid #dcdcdc;
				span{
					color:#cc0000;
				}
			}
			.right{
				width:35%;
				.sure-btn{
					@include a(block,100%,1.40625rem,#fff,#40b952)
					line-height: 1.40625rem;
					text-align:center;
					font-size:0.46875rem;
				}
			}
		}
	}
}



