@import "tobe/function";
@mixin font-dpr($fonts-size){
    font-size: $fonts-size;

    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }

    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
  margin:0;padding:0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance:none;
  font-family: "Microsoft YaHei";
}
button{border: none;}
button:focus{outline: none;}
html, body{
  height: 100%;
}
.wrap-page {
    height: 100%;
    background-origin:content-box; 
    -webkit-background-origin:content-box;
  -webkit-overflow-scrolling: touch;
  background:#27415a url(../images/Uping/bg.jpg) no-repeat bottom center;
  background-size: cover;
  text-align: center;
  max-width: 760px;
width: 100%;
margin:auto;
}
.page{display: flex;min-height:100%;width: 100%;@include flex-direction;}
.inner{width: 100%;
}
.flex-box{display: flex;}
.flex-1{flex: 1;}
.flex-m{-webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: flex;
  }
.flex-d{-webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: flex-end;
    align-items: flex-end;
    display: flex;
  }
.text-left{text-align: left;}
.ipt{
  margin:0.15625rem;
    outline:none;
    width: 4.21875rem;
   height: 1.03125rem;
    line-height: 1.03125rem;
    border-radius: 0;
    color: #000;
    -webkit-appearance: none;background:#fff; padding:0.078125rem;border: none;text-align: center;@include font-dpr(16px);text-align: center; }
.btn1{
 margin:0.15625rem;
    
    padding-left: 0.46875rem;padding-right: 0.46875rem;
    height: 1.25rem;
    line-height: 1.25rem;
    border-radius: 0.15625rem;
    color: #5879da;
    font-weight: bold;
    -webkit-appearance: none;background:#fff;border: none;text-align: center;@include font-dpr(16px);}
.btn2{
 margin:0.15625rem;
    
    padding-left: 0.46875rem;padding-right: 0.46875rem;
    height: 1.25rem;
    line-height: 1.25rem;
    border-radius: 0.15625rem;
    color: #fff;
    font-weight: bold;
    -webkit-appearance: none;background:none;border: 1px solid #fff;text-align: center;@include font-dpr(16px);}
.btn3{
 margin:0.15625rem;
    
    padding-left: 0.46875rem;padding-right: 0.46875rem;
    height: 1.25rem;
    line-height: 1.25rem;
    border-radius: 0.15625rem;
    color: #fff;
    font-weight: bold;
    box-shadow: 0.078125rem -0.078125rem 0 #183067;
    -webkit-appearance: none;background:#40b1f3;border: none;text-align: center;@include font-dpr(16px);}

.m-info{@include font-dpr(16px);text-shadow:0 0 4px #40b1f3;}
.xm-info{@include font-dpr(22px);}
.s-info{@include font-dpr(14px);}
.l-info{@include font-dpr(28px);}
.xl-info{@include font-dpr(32px);}
.xm-info,.m-info,.s-info,.l-info,.xl-info{color:#fff;line-height: 1.5;}

.down-box{background: #5879da;padding:0.625rem;}
.car{width: 2.234375rem;}
.top-bar{background: url(../images/Uping/bg1.png) no-repeat center center;background-size: cover;}
.topic{width: 100%;margin-bottom: -0.3125rem;margin-top: 1.5625rem}
.mask{position: fixed;top:0;left:0;right: 0;bottom: 0;background: rgba(0,0,0,0.8)}
.house{width: 100%;}
.fixed-logo{width: 1.8125rem;position: fixed;top:0.625rem;left:0.625rem}
.good{width: 4.875rem;margin:0.78125rem auto 1.09375rem auto;}
.dot{width: 1.109375rem;position: absolute;left: 50%;top:0.375rem;margin-left: 1.40625rem}
.sping-box{position: relative;width: 7.875rem;height: 4.6875rem;margin: auto;}
.star1{width: 1.0625rem;position: absolute;left:0;top:1.0625rem;}
.star2{width: 0.75rem;position: absolute;right:0.515625rem;top:0.734375rem;}
.star3{width: 0.765625rem;position: absolute;right:0;bottom:0.625rem}
.left-hand,.right-hand{width: 3.25rem;position: absolute;top:50%;margin-top: -1.578125rem;}
.left-hand{right:51%;}
.right-hand{left:51%;}
/*动画库*/

/*闪烁*/
.flash1{
-webkit-animation:fadeIn .8s 1s ease both;
-moz-animation:fadeIn .8s 1s ease both;}

.flash2{
-webkit-animation:fadeIn .8s 1.2s ease both;
-moz-animation:fadeIn .8s 1.2s ease both;}

.flash3{
-webkit-animation:fadeIn .8s 1.4s ease both;
-moz-animation:fadeIn .8s 1.4s ease both;}
@-webkit-keyframes fadeIn
{
0%{opacity:0}
100%{opacity:1}
}
@-moz-keyframes fadeIn
{
0%{opacity:0}
100%{opacity:1}
}

/*左入*/
.left-in{
-webkit-animation:bounceInLeft 1s .2s ease both;
-moz-animation:bounceInLeft 1s .2s ease both;}
@-webkit-keyframes bounceInLeft{
0%{opacity:0;
-webkit-transform:translateX(-2000px)}
60%{opacity:1;
-webkit-transform:translateX(30px)}
80%{-webkit-transform:translateX(-10px)}
100%{-webkit-transform:translateX(0)}
}
@-moz-keyframes bounceInLeft{
0%{opacity:0;
-moz-transform:translateX(-2000px)}
60%{opacity:1;
-moz-transform:translateX(30px)}
80%{-moz-transform:translateX(-10px)}
100%{-moz-transform:translateX(0)}
}

/*右入*/
.right-in{
-webkit-animation:bounceInRight 1s .2s ease both;
-moz-animation:bounceInRight 1s .2s ease both;}
@-webkit-keyframes bounceInRight{
0%{opacity:0;
-webkit-transform:translateX(2000px)}
60%{opacity:1;
-webkit-transform:translateX(-30px)}
80%{-webkit-transform:translateX(10px)}
100%{-webkit-transform:translateX(0)}
}
@-moz-keyframes bounceInRight{
0%{opacity:0;
-moz-transform:translateX(2000px)}
60%{opacity:1;
-moz-transform:translateX(-30px)}
80%{-moz-transform:translateX(10px)}
100%{-moz-transform:translateX(0)}
}
.info-s{
  font-size: 14px;
  color: #fff;
  margin-top: 0.7rem;
  display: none;
}
[data-dpr="2"] .info-s {
  font-size: 28px; }
[data-dpr="3"] .info-s {
  font-size: 42px; }

.select-box {
  z-index: 999;
  position: fixed;
  top: 50%;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  overflow-y: scroll;
  list-style: none;
  -webkit-animation: fadeInBottomBig 1s  ease both;
  -moz-animation: fadeInBottomBig 1s  ease both;
  padding: 0.3125rem; }

.select-box li {
  border: 1px solid #eee;
  padding: 0.234375rem;
  font-size: 14px;
  color: #fff;
  margin: 0.15625rem;
  border-radius: 0.234375rem;
  display: inline-block; }
[data-dpr="2"] .select-box li {
  font-size: 28px; }
[data-dpr="3"] .select-box li {
  font-size: 42px; }

.select-box:before {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9; }

@-webkit-keyframes fadeInLeftBig {
  0% {
    opacity: 0;
    -webkit-transform: translateX(0); }
  50% {
    opacity: 1;
    -webkit-transform: translateX(50vw); }
  100% {
    opacity: 0;
    -webkit-transform: translateX(100vw); } }

@-webkit-keyframes fadeInRightBig {
  0% {
    opacity: 0;
    -webkit-transform: translateX(2000px); }
  100% {
    opacity: 1;
    -webkit-transform: translateX(0); } }

@-webkit-keyframes fadeInBottomBig {
  0% {
    opacity: 0;
    -webkit-transform: translateY(1500px); }
  100% {
    opacity: 1;
    -webkit-transform: translateY(0); } }

.share{
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
}