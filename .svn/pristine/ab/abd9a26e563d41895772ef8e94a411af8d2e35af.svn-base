$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color: #f8f8f8;
}

* {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.wrap-page {
    .icon {
        background: url(../images/1/active-detail.jpg) no-repeat center center;
        background-size: 100% 100%;
        height: 5.203125rem;
    }
    .container {
        padding-bottom: 1.40625rem;
        .detail {
            padding-top: 0.2575rem;
            font-size: 0.42rem;
            padding-left: 0.46875rem;
            color: #403f3f;
            background: #fff;
            padding-bottom: 0.66875rem;
            border-bottom: 1px solid #dcdcdc;
            .title {
                height: 0.84375rem;
                line-height: 0.84375rem;
                border-bottom: 1px solid #dcdcdc;
                display: flex;
                .left-text{
                    width:50%;
                }
                .limit-icon{
                    width:50%;
                    height: 0.53125rem;
                    background:url(../images/1/limit-shop-icon.png) no-repeat right center;
                    background-size:1.875rem 100%;
                    margin-top:0.15625rem;
                }
            }
            .content {
                margin-top: 0.3125rem;
                .people,
                .address,
                .date,
                .limit-discribe {
                    margin-top: 0.134375rem;
                }
                .date {
                    .time {
                        // color: #d34242;
                    }
                }
                .limit-money{
                    display: flex;
                    .now-money{
                        color:#cc0000;
                        font-size:0.66875rem;
                    }
                    .old-money{
                        color:#8c8c8c;
                        text-decoration:line-through;
                        margin-left:0.46875rem;
                        margin-top:0.10625rem;
                    }
                }
            }
        }
        .active-show {
            background-color: #fff;
            border-bottom: 1px solid #dcdcdc;
            margin-top: 0.3125rem;
            padding-bottom: 0.46875rem;
            min-height: 2.525rem;
            .p1 {
                font-size: 0.46875rem;
                text-indent: 0.4875rem;
            }
            .text {
                font-size: 0.4rem;
                margin-left: 0.9rem;
            }
        }
        .takein {
            height: 1.40625rem;
            display: flex;
            background-color: #fff;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #dcdcdc;
            .left {
                width: 65%;
                display: flex;
                .text {
                    line-height: 1.40625rem;
                    margin-left: 0.625rem;
                    font-size: 0.44625rem;
                }
                .number {
                    width: 2.5rem;
                    height: 0.6875rem;
                    border-radius: 0.15625rem;
                    border: 1px solid #e5e5e5;
                    margin-top: 0.359375rem;
                    line-height: 0.68rem;
                    text-align: center;
                }
            }
            .right {
                width: 35%;
                background-color: #40b952;
                font-size: 0.625rem;
                line-height: 1.40625rem;
                color: #fff;
                text-align: center;
            }
        }
    }
}
