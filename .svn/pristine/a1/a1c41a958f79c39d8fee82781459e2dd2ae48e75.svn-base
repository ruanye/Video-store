@import "base";
.flex-box{display: flex;}
.flex-1{flex: 1;}
.flex-m{-webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
}

#page-confirm{
  .content{padding-bottom:2.5rem;}
  .bar{line-height: 2.2rem;background: #fff;z-index: 999 !important;}
  .footer{background: #707071;position: fixed;color:#fff;left:0;bottom:0;right:0;height:2.5rem;text-align:center;line-height:2.5rem;z-index: 999;display: flex;
    .footer-num{flex:1;}
    .footer-btn{width: 6.2rem;background: #a7cc45;color: #fff}
  }
  .content{
    .list-block{
      margin: 0 auto !important;
    }
  }
  .list-block{margin:.5rem auto !important;font-size: .75rem;color:#8a8a8a;}
  .list-block .item-content{padding-left:0 !important;}
  .list-block .item-inner {
    margin-left: 0 !important;
    padding-left: .75rem;
    font-size: .75rem;
    .item-title{flex:1;}
    .item-after{width: 4rem;text-align: center;color:#8a8a8a !important;
display: block !important;
}
.item-after:last-child{text-align: right}

}
.lst-h4{padding:0 0.625rem;border-left: 2px solid #a6ce38;display: inline-block;}
.text-right{text-align: right}
.text-left{text-align: left}
.text-center{text-align: center}
.company-lst{background: #fff;padding:0;margin:0;}
.company-lst li{padding:0.9375rem;position: relative;}
.company-lst li .lst-logo,.company-lst li .price-info{padding:0 0.9375rem;}
.info-s{font-size: 0.75rem;color: #aaaaaa;span{color: #df7878;}}
.price{font-size: 0.625rem;color: #aaaaaa;text-decoration :line-through;span{color: #df7878;}}
.price-info{text-align: left !important;}

.lst-logo{width: 5.625rem;border-right:1px solid #ccc;text-align: center;}
.lst-logo img{width: 3.125rem}
}

