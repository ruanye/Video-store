@import "tobe/function";
@mixin font-dpr($fonts-size) {
    font-size: $fonts-size;
    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }
    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
    margin: 0;
    padding: 0;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-appearance: none;
    font-family: "Microsoft YaHei";
}

button {
    border: none;
}

button:focus {
    outline: none;
}

html,
body {
    height: 100%;
    background: #f1f1f1;
}

.wrap-page {
    height: 100%;
    background-origin: content-box;
    -webkit-background-origin: content-box;
    -webkit-overflow-scrolling: touch;
    background: #f1f1f1;
    text-align: center;
    max-width: 760px;
    width: 100%;
    margin: auto;

}

.page {
    min-height: 100%;
    width: 100%;
    display: flex;
    @include flex-direction;
}
.inner {
    width: 100%;
}

.flex-box {
    display: flex;
}

.flex-1 {
    flex: 1;
}

.flex-m {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: flex;
}

.flex-d {
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: flex-end;
    align-items: flex-end;
    display: flex;
}

.fixed-logo {
    width: 1.527778rem;
    position: fixed;
    top: 0.583333rem;
    left: 0.666667rem;
    z-index: 9;
}

.com-btn {
    padding-left: 0.390625rem;
    padding-right: 0.390625rem;
    width: 6.597222rem;
    height: 1.083333rem;
    line-height: 1.083333rem;
    border-radius: 0.208333rem;
    color: #ffffff;
    font-weight: bold;
    -webkit-appearance: none;
    background: #d32222;
    border: 0;
    text-align: center;
    @include font-dpr(18px);
    box-shadow: 0 0.027778rem 0.027778rem #7e1917,0 0.347222rem 0 0 #7e1917;
    position: relative;
    &:before{
        content:"";
        position: absolute;
        width: 0.166667rem;
        height: 0.138889rem;
        background: #f75c54;
        border-radius: 0.069444rem;
        top:0.111111rem;
        left:0.166667rem;
        z-index: 2;

    }
    &:after{
        content:"";
        position: absolute;
        width: 1.347222rem;
        height: 0.138889rem;
        background: #f75c54;
        border-radius: 0.069444rem;
        top:0.111111rem;
        left:0.527778rem;
        z-index: 2;
    }
    span{position: relative;z-index: 5;letter-spacing: 2px;}
}
.com-btn1 {
    padding-left: 0.390625rem;
    padding-right: 0.390625rem;
    width: 6.916667rem;
    height: 1.111111rem;
    line-height: 1.111111rem;
    border-radius: 0;
    color: #ffffff;
    font-weight: bold;
    -webkit-appearance: none;
    background: #b5000d;
    border: 0;
    text-align: center;
    @include font-dpr(14px);
    position: relative;
    
}

.ipt {
    outline: none;
    width: 7.194444rem;
    height: 1.138889rem;
    line-height: 1.138889rem;
    color: #000;
    -webkit-appearance: none;
    background: none;
    padding: 0.234375rem;
    border: 2px solid #ffe2dc;
    text-align: center;
    @include font-dpr(16px);
    border-radius: 0;
}

// 文案
.info-lg {
    @include font-dpr(32px);
    font-weight: bold;
    color: #fff
}

.info-m {
    @include font-dpr(16px);
    color: #000;
}

.info-lg1 {
    @include font-dpr(28px);
    font-weight: bold;
    color: #000
}

.info-s {
    @include font-dpr(12px);
    color: #000
}



p {
    line-height: 1.5;
}

// mask
.mask {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 99;
}
