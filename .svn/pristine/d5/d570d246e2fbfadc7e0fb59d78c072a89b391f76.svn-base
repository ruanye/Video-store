//动效
.up{
    .rtbox1 img{-webkit-animation:fadeOutUp 3s .2s ease both;
-moz-animation:fadeOutUp 3s .2s ease both;}
.rtbox2 img{-webkit-animation:fadeOutUp 2s .6s ease both;
-moz-animation:fadeOutUp 2s .6s ease both;}
.rtbox3 img{-webkit-animation:fadeOutUp 3s .8s ease both;
-moz-animation:fadeOutUp 3s .8s ease both;}
}
@-webkit-keyframes fadeOutUp{
0%{
-webkit-transform:translateY(0)}
100%{
-webkit-transform:translateY(-21.611111rem)}
}
@-moz-keyframes fadeOutUp{
0%{
-moz-transform:translateY(0)}
100%{
-moz-transform:translateY(-21.611111rem)}
}