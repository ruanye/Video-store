$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}

.wrap-page {
	.activeList{
		.list-detail{
			// border-bottom: 1px solid #e5e5e5;
			margin-bottom: 0.204375rem;
			background-color: #fff;
			padding-bottom:0.203125rem;
			.active-status{
				display: flex;
				font-size:0.395rem;
				color:#454545;
				height:1.1875rem;
				border-bottom:1px solid #e5e5e5;
				.left{
					padding-top:0.3025rem;
					width:50%;
					text-indent: 0.46875rem;
				}
				.right{
					display: flex;
					padding-top:0.3025rem;
					width:50%;
					.total-price{
						margin-left:0.66875rem;
					}
					.number{
						color:#e75353;
					}
				}
			}
			.show{
				height: 3.4375rem;
				// border-bottom:1px solid #e5e5e5;
				display: flex;
				.left{
					width:30%;
					margin-top:0.3125rem;
					// background:url(../images/1/list-icon.jpg) no-repeat center top;
					background-repeat:no-repeat;
					background-position:center top;
					background-size:2.325rem 2.3625rem;
				}
				.right{
					width:70%;
					margin-top:0.22rem;
					font-size:0.40625rem;
					.title{
					    overflow: hidden;
					    text-overflow: ellipsis;
					    display: -webkit-box;
					    -webkit-line-clamp: 2;
				   		 -webkit-box-orient: vertical;
					}
					.address{
						margin-top:0.078125rem;
						display: flex;
						.dizhi{
							width:1.4rem;
						}
						.address-detail{
							width:5.5175rem;
						}
					}
					.time{
						margin-top:0.078125rem;
						.active-time{
							color:#e75353;
							font-size:0.3925rem;
						}
					}
					.price{
						margin-top:0.078125rem;
						display: flex;
						.price-left,.price-right{
							width:50%;
						}
						.price-left{
							.pricenum{
								color:#e75353;
							}
						}
					}
				}
			}
			.user-detail{
				display: flex;
				font-size: 0.4375rem;
				margin-top:0.2425rem;
				margin-left:0.4525rem;
				color:#676767;
				.tel{
					margin-left:0.3125rem;
				}
			}
		}
	}
}



