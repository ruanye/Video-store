$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@charset "UTF-8";
html,
body {
    height: 100%;
}

#dialog {
    display: none;
    background-color: rgba(0, 0, 0, 0.6);
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    .dialog-content {
        border-radius:4px;
        width: 400px;
        height: 300px;
        position: absolute;
        left: 50%;
        margin-left: -200px;
        background-color: #fff;
        top: 50%;
        margin-top: -150px;
        .groupName {
            text-align: center;
            font-size: 28px;
            margin:25px auto 0;
            border-radius:50%;
            line-height: 150px;
            width:150px;
            height: 150px;
            border:1px solid #D7DDBA;
            color: #828282;
        }
        .dialog-close {
            width: 20px;
            height: 20px;
            background: url(../images/close.png) no-repeat;
            background-size: 100% 100%;
            position: absolute;
            right: 10px;
            top: 10px;
            cursor: pointer;
        }
        .star-box {
            width: 150px;
            margin: 50px auto 0;
            &:after {
                display: block;
                content: '.';
                height: 0;
                clear: both;
                visibility: hidden;
            }
            .star {
                width: 21px;
                height: 20px;
                background: url(../images/starts.png) no-repeat;
                background-size: 100% 100%;
                float: left;
                margin-left: 8px;
                cursor: pointer;
            }
            .star.active {
                background: url(../images/starts_active.png) no-repeat;
            }
        }
    }
}

.container {
    width: 1170px;
    padding: 15px;
    margin: 20px auto;
    border: 1px solid #ffffff;
    -webkit-box-shadow: 0 0 10px #e2e2e2;
    -moz-box-shadow: 0 0 10px #e2e2e2;
    box-shadow: 0 0 10px #e2e2e2;
    background: #ffffff;
    .topBar {
        height: 36px;
        padding: 37px 0 37px;
        line-height: 36px;
        background-color: #fff;
        ul {
            .item {
                float: left;
                font-size: 14px;
                .group {
                    border: 1px solid #e5e5e5;
                    background-color: #f9f9f9;
                    height: 30px;
                    width: 185px;
                }
            }
            .item1 {
                margin-left: 30px;
                font-size: 16px;
                .special {
                    color: #d20000;
                    font-size: 18px;
                }
            }
            .item2 {
                margin-left: 65px;
                .groupNum {
                    border: 1px solid #e5e5e5;
                    background-color: #f9f9f9;
                    height: 20px;
                    padding: 5px;
                    text-indent: 2px;
                }
            }
            .item3 {
                margin-left: 50px;
                .group {
                    height: 20px;
                    padding: 5px;
                    text-indent: 2px;
                }
            }
            .item4 {
                float: right;
                margin-right: 45px;
                a {
                    background-color: #d20000;
                    color: #fff;
                    display: block;
                    width: 110px;
                    height: 34px;
                    border-radius: 3px;
                    text-align: center;
                    line-height: 34px;
                    &:hover {
                        text-decoration: none;
                    }
                }
            }
            &:after {
                display: block;
                content: '';
                clear: both;
                height: 0;
            }
        }
    }
    .content {
        overflow-y: auto;
        overflow-x: hidden;
        height: 470px;
        .groupItem {
            width: 1200px;
            overflow-x: scroll;
            white-space: nowrap;
            overflow-y: hidden;
            position: relative;
            &:hover{
              cursor: pointer;
              background-color:#dddddd !important;
            }
            &:nth-child(2n) {
                background-color: #e5e5e5;
                .num {
                    background-color: #c1c1c1;
                    .bebal {
                        border-bottom-color: #e5e5e5;
                        border-right-color: #e5e5e5;
                    }
                }
            }
            &:nth-child(2n+1) {
                background-color: #e5e5e5;
                .num {
                    .bebal {
                        border-bottom-color: #e5e5e5;
                        border-right-color: #e5e5e5;
                    }
                }
            }
            .num {
                position: absolute;
                height: 143px;
                width: 150px;
                line-height: 140px;
                text-align: center;
                font-size: 16px;
                font-weight: 600;
                color: #333333;
                overflow: hidden;
                background-color: #d2d2d2;
                .bebal {
                    width: 0;
                    height: 0;
                    position: absolute;
                    top: 0;
                    left: 64px;
                    border-top: 80px solid transparent;
                    border-bottom: 80px solid transparent;
                    border-left: 43px solid transparent;
                    border-right: 43px solid transparent;
                }
            }
            .studentItem {
                height: 143px;
                display: inline-block;
                width: 100px;
                &:nth-child(2) {
                    margin-left: 150px;
                }
                .icon {
                    .icon-img{
                        height: 85px;
                        width: 85px;
                        border-radius: 50%;
                        margin: 18px auto 10px;
                        background-size: 85px 85px;
                    }
                }
                .nameText {
                    text-align: center;
                    color: #141213;
                }
            }
        }
    }
}
