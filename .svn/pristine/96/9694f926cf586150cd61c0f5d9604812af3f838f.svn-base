$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@charset "UTF-8";

html{
    background:#ffffff;
}
.w {
    width: 990px;
    margin: 0 auto;
}

#login {
    position: relative;
    width: 300px;
    margin: 25px 0 5px 0;
    height: 60px;
}

#content {
    border-top: 2px solid #de0313;
}

#container{
  border-top: 2px solid #de0313;
  width: 1000px;
  height: 400px;
  margin: auto;
  box-shadow: 0px 0px 10px #CCC;
  margin-top: 50px;
  position: relative;
  >.login{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
    .form-item{
      margin: 25px 0px;
      >.label{
        display: inline-block;
        width: 60px;
        font-size: 16px;
        color: #3e3e3e;
      }
      >input{
        display: inline-block;
        border: 1px solid #CCC;
        background: rgb(248,248,248);
        height: 40px;
        line-height: 40px;
        width: 300px;
        font-size: 20px;
        text-align: center;
        box-sizing: border-box;
        color: #3e3e3e;
        &[type=button]{
          background: #de0313;
          border: 0px;
          border-radius: 5px;
          color: #FFF;
          cursor: pointer;
        }
      }
    }
  }
  >.down{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    >.name{
      font-size: 14px;
      margin-bottom: 20px;
    }
    >button{
      height: 40px;
      line-height: 40px;
      width: 300px;
      font-size: 20px;
      background: #de0313;
      border: 0px;
      border-radius: 5px;
      color: #FFF;
      cursor: pointer;
    }
  }
  >.work{
    width: 70%;
    margin: 30px auto;;
    .content{
      .type{
        display: inline-block;
        border-radius: 5px;
        background: #00FF00;
        display: none;
      }
    }
    .answer{
      margin-top:30px;
      color:#848080;
      &.chose{
        .item{
          cursor: pointer;
          .code{
            margin-top: 10px;
            height: 15px;
            width: 15px;
            line-height: 15px;
            text-align: center;
            display: inline-block;
            border: 1px solid #CCC;
            border-radius: 50%;
            background: #FFF;
            color: #848080;
          }
          &.chosed{
            .code{
              background:rgb(0,88,174);
              color: #FFF;
            }
          }
        }
      }
      &.type{
        textarea{
          width: 100%;
        }
      }
    }
    .footer{
      text-align: center;
      margin-top: 40px;
      button{
        display: inline-block;
        visibility: hidden;
        margin: 0 10px;
        height: 40px;
        line-height: 40px;
        width: 300px;
        font-size: 20px;
        background: #de0313;
        border: 0px;
        border-radius: 5px;
        color: #FFF;
        cursor: pointer;
        &.active{
          visibility: visible;
        }
        &.next{
          background: rgb(0,38,76);
        }
      }
    }
  }
}
