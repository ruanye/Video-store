@import "base";

#page-pricedetail {
  .content {
    padding-bottom: 2.5rem;
  }
  .bar {
    line-height: 2.2rem;
    background: #fff;
    z-index: 999 !important;
  }
  .footer {
    background: #707071;
    position: fixed;
    color: #fff;
    left: 0;
    bottom: 0;
    right: 0;
    height: 2.5rem;
    text-align: center;
    line-height: 2.5rem;
    z-index: 999;
    display: flex;
    .footer-num {
      flex: 1;
    }
    .footer-btn {
      width: 6.2rem;
      background: #a7cc45;
      color: #fff
    }
  }
  .list-block {
    margin: .5rem auto !important;
    font-size: .75rem;
    color: #8a8a8a;
  }
  .list-block .item-content {
    padding-left: 0 !important;
  }
  .list-block .item-inner {
    margin-left: 0 !important;
    padding-left: .75rem;
    font-size: .75rem;
    .item-title {
      flex: 1;
      &.label {
        width: 45% !important;
      }
    }
    .item-after {
      width: 3rem;
      text-align: center;
      color: #8a8a8a !important;
      display: block !important;
    }
    .item-after:last-child {
      text-align: right
    }

  }
  .text-right {
    text-align: right
  }
  .text-left {
    text-align: left
  }
  .text-center {
    text-align: center
  }
}
.list-block .item-inner {
  .item-title {
    &.label {
      width: 45% !important;
    }
  }
}

#page-input {
  .list-block {
    margin: .5rem auto;
  }
  .calendar {
    position: relative;
    span {
      position: absolute;
      top: 0;
      right: 0;
      font-size: 24px;
      color: #a7cc45;
      line-height: 40px;
    }
  }
  .custom-radio {
    display: inline-block
  }
  .custom-radio input[type=radio] {
    border: 0 none !important;
    clip: rect(1px, 1px, 1px, 1px);
    height: 1px !important;
    overflow: hidden !important;
    position: absolute !important;
    width: 1px !important;

  }
  .custom-radio label {
    width: 35px;
    height: 35px;
    text-align: center;
    line-height: 35px;
    font-size: .5rem;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin: auto 10px;
    color: #ccc;
    position: relative;
    z-index: 999;
  }
  .custom-radio input[type="radio"]:checked + label {
    border: 1px solid #a7cc45;
    color: #a7cc45;

  }
  .custom-radio input[type="radio"]:checked + label:after {
    content: url(../images/xz.png);
    color: #a7cc45;
    position: absolute;
    bottom: -15px;
    right: -1px;

  }
}