$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
    height: 100%;
}
body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
$bgcolor: #2c51be;
$width: 10rem;
::-webkit-input-placeholder {
    color: #fff
}
:-moz-placeholder {
    color: #fff
}
::-moz-placeholder {
    color: #fff
}
:-ms-input-placeholder {
    color: #fff
}
.wrap-page {
    height: 100%;
    width: 10.0rem;
    margin: 0 auto;
}
.page {
    width: 10rem;
    height: 100%;
   position: relative;
}
%rel {
    position: relative;
}
%posa {
    position: absolute;
}
%colorf {
    color: #fff;
}
.text-center {
    text-align: center;
}
img, span, input {
    @include inline-block;
}
button {
    background-color: transparent;
    outline: none;
}
.top {
  img {
      margin-left: 0.875rem;
    margin-top: 1.03125rem;
        width: 2.390625rem;
        height: 2.390625rem;
    }
}
.page1{
       background: url(../images/bg1.jpg) no-repeat;
    background-size: 100% 100%; 
}
.page2{
      background: url(../images/bg.jpg) no-repeat;
    background-size: 100% 100%; 
}
.logo{
     padding-top: 2.8125rem;
     height:1.75rem;
    img{
        width:4.921875rem;
        height:1.75rem;
    }
}
.phone{
    color: #fff;
    font-size: 0.78125rem;
    margin-top: 0.90625rem;
}
.putimg{
    margin-top: 0.625rem;
     height:0.859375rem;
    img{
        width:6.546875rem;
        height:0.859375rem
    }
}
.inputbox{
    input{
        border: none;
        width:6.5625rem;
        height: 1.0625rem;
        line-height: 1.0625rem;
        border:2px solid #0b586e;
        border-radius: 0.15625rem;
        font-size: 0.59375rem;
        text-indent: 0.3125rem;
    }
}
.btn{
    color: #fff;
    width:2.75rem;
    height:1.125rem;
    line-height: 1.125rem;
    background-color: #e53f32;
     border:2px solid #0b586e;
       border-radius: 0.15625rem;
       font-size: 0.59375rem;
}
.btnbox{
    margin-top: 1.015625rem;

}
.cy{
    margin-top: 0.25rem;
    img{
       width:6.125rem;
       height:3.3125rem; 
       
    }
}
.hb{
    img{
        width:6.953125rem;
        height:4.984375rem;

    }
}
.stext{
    color: #fff;
    font-size: 0.46875rem;
    &.o{
        color: #fdd23e;
        margin-top: 0.3125rem;
    }
}