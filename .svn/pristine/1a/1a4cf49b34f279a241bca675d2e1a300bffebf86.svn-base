$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@charset "UTF-8";

.container {
    width: 1170px;
    padding: 15px 15px 15px 0px;
    margin:25px auto;
    border:1px solid #ffffff;
    -webkit-box-shadow:0 0 10px #e2e2e2;
    -moz-box-shadow:0 0 10px #e2e2e2;
    box-shadow:0 0 10px #e2e2e2;
    background:#ffffff;
    >.top{
        margin: 0px 20px 20px 20px;
        text-align: right;
        height: 35px;
        position: relative;
        >.btn{
            position: absolute;
            display: inline-block;
            padding: 0px 10px;
            line-height: 35px;
            font-size: 16px;
            width: 110px;
            background-color: rgb(210,0,20);
            border-radius: 3px;
            text-align: center;
            cursor: pointer;
            &:hover{
            }
            >a{
                color: #FFF;
            }
            &.back{
                left:0;
                background-color: rgb(185,185,185);
            }
            &:hover{
                background:#de0313;
            }
            &.close{
                right:0;
            }
        }
        >.text{
            font-size: 22px;
            cursor: pointer;
            color: #4E88C1;
            display: inline-block;
        }
        &:after{
            content: '';
            display: block;
            height: 0;
            clear: both
        }
    }
    a{
        text-decoration: none;
    }
    >.questions{
        margin: 30px 70px 0px 70px;
        min-height: 300px;
        >.content{
            margin: 0px;
            font-size: 16px;
        }
        >.answer{
            margin: 0px;
            padding: 0px 20px;
            >.item{
                position: relative;
                margin-top: 20px;
                >.left{
                    float: left;
                    width: 85%;
                    >.text{
                        font-size: 12px;
                        margin-bottom: 10px;
                    }
                    >.progress{
                        height: 20px;
                        border: 1px solid #CCC;
                        border-radius: 3px;
                        background-color: #FFF;
                        margin-left: 20px;
                        position: relative;
                        >.percent{
                            height: 22px;
                            border-radius: 3px;
                            position: relative;
                            top: -1px;
                            left:0px;
                            width: 0px;
                            transition: all 0.3s;
                        }
                        >.text{
                            width: 50px;
                            height: 22px;
                            line-height: 22px;
                            position: absolute;
                            right: -60px;
                            bottom: 0px;
                        }
                    }
                }
                >.right{
                    // width: 20%;
                    float: right;
                    >.submit{
                        position: absolute;
                        bottom: 0px;
                        right: -30px;
                        transform: translate(-50%,0px);
                        height: 20px;
                        line-height: 22px;
                        font-size: 12px;
                        background-color: rgb(238,238,238);
                        width: 85px;
                        margin: 0px auto;
                        text-align: center;
                        border-radius: 3px;
                        cursor: pointer;
                        &:hover{
                            background-color:#de1313;
                            color: #ffffff;
                        }
                    }

                }
            }
        }
        >.stu{
          margin: 0px;
          padding: 0px 20px;
          >.item{
            margin-top: 20px;
            >.left{
              float: left;
              width: 15%;
              text-align: center;
              .avatar{
                height: 70px;
                width: 70px;
                border-radius: 50%;
              }
              .name{
              }
            }
            >.right{
              float: left;
              width: 80%;
              padding: 20px;
              // border: 1px solid red;
              // color: #CCC;
              font-size: 12px;
              letter-spacing:1px;
            }
          }
        }
        >.referenceAnswers{
            margin: 20px;
            display: none;
        }
    }
    >.bottom{
        text-align: center;
        margin: 50px 0px;
        >.btn{
            height: 35px;
            line-height: 35px;
            font-size: 16px;
            width: 215px;
            text-align: center;
            display: inline-block;
            color: #FFF;
            border-radius: 5px;
            cursor: pointer;
            &.prev{
                float: left;
                margin-left: 100px;
                background-color: rgb(210,0,20);
                visibility: hidden;
            }
            &.next{
                float: right;
                margin-right: 100px;
                background-color: rgb(210,0,20);
                visibility: hidden;
            }
            &.answer{
                background-color: rgb(0,40,85);
            }
        }
    }
    >.mask-putquestions{
        display: none;
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 100%;
        background-color: rgba(0,0,0,0.5);
        z-index: 9999;
        >.putquestions{
            width: 1010px;
            height: 540px;
            background-color: #FFF;
            position: absolute;
            top:50%;
            left: 50%;
            transform: translate(-50%,-50%);
            padding:30px;
            >.close{
                position: absolute;
                right: 25px;
                top:25px;
                height: 30px;
                width: 30px;
                cursor: pointer;
            }
            >.answer{
                width: 100%;
                padding: 20px 0px;
                border-bottom: 1px solid #F00;
                font-size: 16px;
            }
            >.tips{
                margin: 10px 0px 0px 10px;
                font-size: 14px;
            }
            >.items{
                margin-left: 30px;
                >.item{
                    margin: 20px 35px;
                    float: left;
                    height: 120px;
                    width: 90px;
                    cursor: pointer;
                    >.avatar{
                        width: 90px;
                        height: 90px;
                        border-radius: 50%;
                        overflow: hidden;
                    }
                    >.nickname{
                        margin: 0px auto;
                        text-align: center;
                        height: 30px;
                        line-height: 40px;
                        font-size: 16px;
                    }
                }
            }
        }

    }
}
