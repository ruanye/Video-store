$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
	tap-highlight-color:rgba(0,0,0,0);
}

.wrap-page {
	.container{
		height:5.21875rem;
		.swiper-slide{
			height:5.21875rem;
			img{
				width:100%;
				height: 100%;
			}
		}
		.swiper-pagination{
			bottom:0.15625rem;
			.swiper-pagination-bullet-active{
				background:#444447!important;
			}
			.swiper-pagination-bullet{
				background-color: transparent;
				opacity: 1;
				border:0.03125rem solid #444447;
			}
		}
	}    
	.content{
		.newActive{
			margin-top:0.4125rem;
			background-color: #fff;
			height:1.71875rem;
			border-top:1px solid #dcdcdc;
			border-bottom:1px solid #dcdcdc;
			.active{
				display: flex;
				width:100%;
				height: 100%;
			}
			.left{
				width:3.225rem;
				height: 1.71875rem;
				background:url(../images/1/newActive.png) no-repeat center center;
				background-size:2.1875rem 0.9375rem;				
			}
			.right{
				height: 0.9375rem;
				// border-left:1px solid #dcdcdc;
				margin-top:0.390625rem;
				p{
					font-size:0.3825rem;
					margin-top:-0.05rem;
					margin-left:0.78125rem;
					color:#888888;
				}
			}
		}
		.function{
			margin-top:0.2525rem;
			margin-bottom:0.2525rem;
			height: 3.30375rem;
			display: flex;
			.left{
				width:50%;
				height: 3.34375rem;
				margin-left:0.078125rem;
				.pre{
					width:5.046875rem;
					height: 3.34375rem;
					display: block;
					margin:0 auto;
					background:url(../images/1/order.png) no-repeat center center;
					background-size:5.046875rem 3.34375rem;	
					border:1px solid transparent;
					border-radius:0.18125rem;
				}
			}
			.goods{
				height: 3.34375rem;
				width:50%;
				.drug{
					display: block;
					margin:0 auto;
					width:4.5625rem;
					height: 1.703125rem;
					background:url(../images/1/drug.png) no-repeat center center;
					background-size:cover;	
					border:1px solid transparent;
					border-radius:0.1025rem;					
				}				
				.shop{
					width:4.5625rem;
					height: 1.59375rem;
					margin:0 auto;
					margin-top:0.078125rem;
					background:url(../images/1/shop.png) no-repeat center center;
					background-size:cover;	
					border:1px solid transparent;
					border-radius:0.1025rem;
					display: block;					
				}
			}
		}
		.nav-bar{
			display: flex;
			justify-content: center;
			border-bottom:1px solid #dcdcdc;
			border-top:1px solid #dcdcdc;
			position:absolute;
			height:1.25rem;
			width:100%;
			background:#fff;
			z-index: 11;
			transform:translateZ(0px);
			.nav-bar-detail{
				text-align: center;
				font-size:0.475rem;
				width:33.3333%;
				height: 1.23rem;
				line-height: 1.21rem;
				margin-bottom: 0.03125rem;
			}
			.nav-bar-detail.active{
				color:#5BE364;
				border-bottom: 0.075125rem solid #5BE364;
			}
		}
		.nav-bar.fixed{
			position:fixed;
			left: 0;
			top:0;

		}
		.detail-tab.active{
			display: block;
			z-index: 1;
		}
		.detail-tab{
			width:100%;
			position: absolute;
			display: none;
			z-index: -1;
			margin-top:1.25rem;
		}
		p{
			margin-left:0.25625rem;
			margin-right:0.25625rem;
			font-size:0.4125rem;
		}
		.detail{
			.storeName{
				font-size:0.5525rem;
				margin-top:0.3125rem;
				margin-top:0.35625rem;
			}
			.title{
				font-size:0.56875rem;
				margin-top:0.35625rem;
			}
			.type{
				font-weight: 600;
				margin-top:0.15625rem;
				margin-bottom:0.15625rem;
				font-size:0.46875rem;
			}
			.context{
				text-indent: 0.63625rem;
			}
			.point{
				font-weight: 700;
				// text-indent:0.625rem;
			}
			.address-box{
				padding:0.2rem;
				img{
                    width:100% !important;
                    height: auto!important;
                    display: block;
                    margin: 0.078125rem auto;						
				}
			}	
		}
		.store1{
			.point{
				font-weight: 600;
			}
			.daohang{
				width:2.5rem;
				height:0.9375rem;
				line-height:0.9375rem;
				color:#9a9a9a;
				background:url(../images/1/daohang.png) no-repeat 0.425rem center;
				background-size:0.375rem 0.5625rem;
				position:absolute;
				right:0.3125rem;
				top:50%;
				margin-top:-0.3rem;
				border-left:1px solid #9a9a9a;
				.text{
					margin-left:1rem;
				}
			}	
			.address{
				position:relative;
				min-height:1.7625rem;

			}	
			.address-box{
				padding:0.2rem;
				img{
                    width:100% !important;
                    height: auto!important;
                    display: block;
                    margin: 0.078125rem auto;					
				}
			}	
		}
		.store2{
			.point{
				font-weight: 600;
			}
			.daohang{
				width:2.5rem;
				height:0.9375rem;
				line-height:0.9375rem;
				color:#9a9a9a;
				background:url(../images/1/daohang.png) no-repeat 0.425rem center;
				background-size:0.375rem 0.5625rem;
				position:absolute;
				right:0.3125rem;
				top:0.675rem;
				border-left:1px solid #9a9a9a;
				.text{
					margin-left:1rem;
				}
			}
			.address{
				position:relative;
				min-height:1.7625rem;
			}		
			.address-box{
				padding:0.2rem;
				img{
                    width:100% !important;
                    height: auto!important;
                    display: block;
                    margin: 0.078125rem auto;						
				}
			}				
		}
		.imgCon{
			width:10rem;
			img{
				width:10rem;
				height: auto;
			}
		}
	}
}
.center{
	text-align:center;
}
.t-left{
	text-align:left;
}


