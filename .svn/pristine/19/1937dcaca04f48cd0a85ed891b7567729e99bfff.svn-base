<body>
    <div class="wrap-page">
        <div id="wx_pic" style="display: none;margin: 0 auto;">
            <img src="images/icon.jpg" />
        </div>
        <section class="page" id="page1" >
            <div class="icon-1">
                <img src="images/love.png" alt="">
            </div>            
            <div class="icon-2">
                <img src="images/text1.png" alt="">
            </div>            
            <div class="icon-3">
                <img src="images/text2.png" alt="">
            </div>
            <button type="button" class="click" style="background:ragb(0,0,0,0.6)">点击领取优步红包</button>
        </section>       
        <section class="page" id="page2" style="display:none;">
            <div class="text">
                优步红包致青春
            </div>
            <div class="inputTel" style="border-radius:5px;">
                <div class="outline">
                    <input type="text" id="phoneNumber" style="border-radius:5px;" placeholder="输入手机号领取乘车红包">
                </div>
            </div> 
            <div id="errorInfo"></div>        
            <button type="button" class="tel-btn"></button>
        </section>        
        <section class="page" id="page3" style="display:none;">
            <div class="content">
                <div class="icon-1">
                    <img src="images/warn.png" alt="">
                </div>                
                <div class="icon-2">
                    <img src="images/text3.png" alt="">
                </div>                
                <div class="icon-3">
                    <img src="images/4yuan.png" alt="">
                </div>                
                <div class="icon-4">
                    <img src="images/5yuan.png" alt="">
                </div>
                <div class="text">使用期限：2016年7月8日（周五）至7月10日（周日）</div>
                <button type="button" class="share-btn"></button>
            </div>     
        </section>
        <section class="page" id="page4" style="display:none;position:absolute;left:0;top:0;">
            <div class="pointer"></div>  
        </section>

    </div>
    <script type="text/javascript" src="../../javascript/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="../../javascript/av-0.5.1.min.js"></script>
