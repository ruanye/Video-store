$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";

@charset "UTF-8";
.wrap-page,
body,
html {
    height: 100%
}
body {
    font:12px/1.5 "Microsoft YaHei",tahoma,arial,'Hiragino Sans GB','宋体',sans-serif
}
.page{
    width:100%;
    height: 100%;
    overflow: hidden;
    position:relative;
}
.flex{
    display: flex;
}
#page1{
	background:#7a7678 url(../images/page1-bg.png) no-repeat center center;
	background-size:100% 100%;
	.uber-icon{
		position:absolute;
		bottom:0.78125rem;
		left:0.78125rem;
		width:2.5rem;
		height: 2.5rem;
		background:url(../images/uber-icon.png) no-repeat center center;
		background-size:100% 100%;
	}
	.title-icon{
		background:url(../images/page1-title.png) no-repeat center center;
		background-size:100% 100%;		
		width:7.234375rem;
		height: 3.078125rem;
		margin:4.0625rem auto 0;
	}
	.tel{
		width:3.940625rem;
		height: 0.78125rem;
		margin: 0.48125rem auto 0;
		input{
			border:none;
			outline: none;
			display: block;
			background-color:#d6d6d5;
			color: #7a7678;
			border-radius:0.178125rem;
			width:100%;
			height: 100%;
			text-align: center;
		}
		.warnings{
			text-align: center;
		}
	}
	.game-start{
		width:3.859375rem;
		height: 2.5625rem;
		margin:1.26875rem auto 0;
		background:url(../images/game-start.png) no-repeat center center;
		background-size:100% 100%;	
	}
}
#page2{
	background:url(../images/page2-bg.png) no-repeat center center;
	background-size:100% 100%;	
	.score{
		margin-top:0.78125rem;
		margin-left:0.78125rem;
		p{
			font-weight: 600;
		}
	}	
	.rule{
		width:8.953125rem;
		height: 13.4375rem;
		background:url(../images/rule.png) no-repeat center center;
		background-size:100% 100%;	
		position:absolute;
		top:0.28125rem;
		left:50%;
		transform: translate(-50%,0) scale(0.85,0.85);
		button{
			width:3.6875rem;
			height:1.25rem;
			position:absolute;
			bottom:1.2625rem;
			left: 50%;
			transform: translate(-50%,0);
			background:transparent;
		}
	}
	.car{
		position:absolute;
		width:3.859375rem;
		height: 1.671875rem;
		bottom:0.78125rem;
		background:url(../images/car.png) no-repeat center center;
		background-size:100% 100%;	
	}
}
#page3{
	background:url(../images/page3-bg.png) no-repeat center center;
	background-size:100% 100%;	
	.result-text{
		margin-top:2.0875rem;
		.p1,.p2{
			text-align: center;
			font-size: 0.40875rem;
			color:#6cc1a5;
		}		
		.p3{
			text-align: center;
			font-size: 0.40875rem;
			color:#6cc1a5;
		}		
		.p4{
			text-align: center;
			font-size: 0.40875rem;
			color:#6cc1a5;
		}		
		.p5{
			text-align: center;
			font-size: 0.40875rem;
			color:#6cc1a5;
		}		
		.p6{
			text-align: center;
			font-size: 0.40875rem;
			color:#6cc1a5;
		}		
		.p7{
			text-align: center;
			font-size: 0.20875rem;
			color:#6cc1a5;
		}
	}
	.hongbao{
		width:4.234375rem;
		height: 6.225rem;
		background:url(../images/hongbao.png) no-repeat center center;
		background-size:100% 100%;	
		margin:0 auto;
	}
	.moreChance{
		width:4.421875rem;
		height: 1.375rem;
		margin:0.46875rem auto 0;
		background:url(../images/chance.png) no-repeat center center;
		background-size:100% 100%;			
	}
}
#page4{
	background:url(../images/page3-bg.png) no-repeat center center;
	background-size:100% 100%;	
	position:relative;
	.hongbao{
		width:8.96875rem;
		height: 13.0625rem;
		background:url(../images/shareText.png) no-repeat center center;
		background-size:100% 100%;	
		position:absolute;
		left:50%;
		transform:translate(-50%,0);
		top:0.46875rem;
		button{
			position:absolute;
			bottom:1.2625rem;
			left: 50%;
			transform:translate(-50%,0);
			width:3.96875rem;
			height: 1.25rem;
			background:transparent;
			z-index: 110
		}
	}
	.dialog{
		position:absolute;
		width:100%;
		height: 100%;
		background:rgba(0,0,0,0.7);
		z-index: 111;
		.pointer{
			background:url(../images/pointer.png) no-repeat center center;
			background-size:100% 100%;	
			width:1.53125rem;
			height: 3.015625rem;
			position:absolute;
			right: 0;			
		}
		.text{
			margin-top:6.25rem;
			color:#fff;
			font-size:0.8625rem;
			margin-left:0.3125rem;
		}
	}	
}