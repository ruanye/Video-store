$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
%cb {
    margin: 0 auto;
}

body {
    background-color: #f3f3f3;
}

.allcontainer {
    width: 10rem;
    height: 100%;
    @extend %cb;
    background-color: #f3f3f3;
}

.tip {
    width: 9.21875rem;
    height: 0.8125rem;
    line-height: 0.8125rem;
    @extend %cb;
    background-color: #fffec8;
    border-radius: 0 0 0.8125rem 0.8125rem;
    text-align: center;
    font-size: 0.375rem;
    color: #787878;
}

.listcontainer {
    margin-top: 0.1875rem;
    margin-bottom: 2rem;
}

.list {
    position: relative;
    background-color: #fff;
    border-top: 2px solid #f3f3f3;
    padding: 0.1875rem 0;
    overflow-y: hidden;
    clear: both;
    .imgbox {
        float: left;
        width: 2.875rem;
        height: 2.328125rem;
        margin-left: 15px;
        img {
            width: 2.875rem;
            height: 2.328125rem;
        }
    }
    .text {
        width: 4rem;
        margin-left: 0.375rem;
        float: left;
        h4 {
            @extend %twoellipsis;
            font-size: 0.375rem;
            font-weight: 400;
            color: #323232;
            line-height: 1.5;
        }
        p {
            color: #5b5b5b;
            font-size: 0.375rem;
            line-height: 2.6;
            &.guige {
                line-height: 1.5;
            @include ellipsis;
            }
        }
        .mynum {
            width: 2.25rem;
            border-top: 1px solid #c9c9c9;
            border-bottom: 1px solid #c9c9c9;
            clear: both;
            overflow: hidden;
            span,
            input {
                float: left;
                width: 0.75rem;
                height: 0.734375rem;
                line-height: 0.734375rem;
                text-align: center;
            }
            input {
                border: none;
            }
            span {
                background-color: #c9c9c9;
                color: #585858;
                font-size: 0.40625rem;
                &.num {
                    box-sizing: border-box;
                    background-color: #fff;
                    font-size: 0.3125rem;
                    border-top: 1px solid #c9c9c9;
                    border-bottom: 1px solid #c9c9c9;
                }
            }
        }
    }
    .checkbox {
        padding: 0 0.25rem;
        height: 2.328125rem;
        float: left;
        position: relative;
        input {
            position: absolute;
            top: 50%;
        }
    }
    .right {
        position: absolute;
        right: 0.1rem;
        top: 0.26rem;
        .price {
            width: 1.21875rem;
            text-align: center;
            font-weight: 700;
            color: #c00;
            font-size: 0.3125rem;
        }
        .del {
            margin-top: 1.125rem;
            width: 1.21875rem;
            height: 0.5625rem;
            line-height: 0.5625rem;
            text-align: center;
            border: 1px solid #b5b5b5;
            @include border-radius(0.04688rem);
        }
    }
}

input.check {
    width: 0.3125rem;
    height: 0.3125rem;
    background-color: #fff;
    border: 1px solid #666;
    border-radius: 0.046875rem;
    &.hassel {
        @include inline-block;
        background: #e26969;
    }
}

.bottom {
    overflow: hidden;
    clear: both;
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 1.4375rem;
    line-height: 1.4375rem;
    p {
        float: left;
    }
    .allprice {
        width: 6.4375rem;
        background-color: #fff;
        height: 1.4375rem;
        label,
        input {
            vertical-align: middle;
        }
        label {
            margin-left: 0.75rem;
        }
        i {
            font-style: normal;
            margin-left: 0.42188rem;
        }
        .allvalue {
            margin-left: 0.90625rem;
            font-size: 0.46875rem;
            color: #c82121;
        }
    }
    .settlement {
        float: right;
        background-color: #40b952;
        width: 3.5625rem;
        height: 1.4375rem;
        color: #fff;
        font-size: 0.46875rem;
        text-align: center;
    }
}

span.hassel {
    background-position: -0.28125rem 0!important;
}

#allcheck {
    @include inline-block;
    width: 0.4375rem;
    height: 0.4375rem;
    position: relative;
    border-radius: 0.046875rem;
    i {
        position: absolute;
        top: -0.38rem;
        right: 0;
        font-size: 0.421875rem;
        color: #40b952;
        width: 0.421875rem;
        height: 0.421875rem;
        &.i1 {
            z-index: 0;
        }
        &.i2 {
            color: #eee;
            z-index: 1
        }
    }
}

.check_x {
    width: 0.4375rem;
    height: 0.4375rem;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: inline-block;
    background-position: 0 0;
    position: relative;
    box-sizing: border-box;
    top: 40%;
    left: 0.125rem;
    i {
        position: absolute;
        top: -5px;
        left: 0;
        font-size: 0.421875rem;
        color: #40b952;
        width: 0.421875rem;
        height: 0.421875rem;
        &.i2 {
            color: #eee;
        }
    }
}

@font-face {
    font-family: 'iconfont';
    src: url('fonts/iconfont/iconfont.eot');
    /* IE9*/
    src: url('fonts/iconfont/iconfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('fonts/iconfont/iconfont.woff') format('woff'), /* chrome、firefox */
    url('fonts/iconfont/iconfont.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('fonts/iconfont/iconfont.svg#iconfont') format('svg');
    /* iOS 4.1- */
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}

.hassel {
    .i1 {
        display: none;
        z-index: 2
    }
}

.swiper-container {
    width: 100%;
    height: 100%;
}

.swiper-slide {
    height: 100%;
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
}

%twoellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
