$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@import "time.scss";
@charset "UTF-8";

.container {
    width: 1170px;
    padding: 15px;
    margin:25px auto;
    border:1px solid #ffffff;
    -webkit-box-shadow:0 0 10px #e2e2e2;  
  	-moz-box-shadow:0 0 10px #e2e2e2;  
  	box-shadow:0 0 10px #e2e2e2; 
    background:#ffffff;
}

.container .content{
	margin:48px auto;
	padding:60px 0;
	width:580px;
	text-align: center;
	font-size:16px;
	color:#01165E;
}
.container .content:after {
    content: '';
    display: block;
    height: 0;
    clear: both;
}
.content .select-left{
	position:relative;
	width:239px;
	height:238px;
	float:left;
	background:url(../images/select-item-left-off.png) center no-repeat;
}
.content .class-system{
	position:absolute;
	bottom:30px;
	left:0;
	right:0;
	display:block;
}

.content .after-class-system{
	position:absolute;
	bottom:30px;
	left:0;
	right:0;
	display:block;
}

.content .select-left:hover{
	cursor: pointer;
	background:url(../images/select-item-left-on.png) center no-repeat;
}
.content .select-right{
	display: block;
	position:relative;
	float:right;
	width:238px;
	height:240px;
	background:url(../images/select-item-right-off.png) center no-repeat;
}
.content .select-right:hover{
	cursor: pointer;
	background:url(../images/select-item-right-on.png) center no-repeat;
}
.content .select-left:hover .class-system,.content .select-right:hover .after-class-system{
	color:#de0313;
}
/* course-list 2016-04-13 22:55:00 课程表 STYLE*/
.course-list{
	margin:25px 117px 52px 117px; 
	border-top:1px solid #032052;
	border-left:1px solid #032052;
	border-right:1px solid #032052;
}
.course-list .course-item{
	height:52px;
	vertical-align:middle;
	color:#032052;
	font-size:14px;
	border-bottom:1px solid #032052;
}
.course-list .course-item:after{
	content: '';
    display: block;
    height: 0;
    clear: both;
}

.course-list .course-item .item-td{
	width:124px;
	height:52px;
	text-align:center;
	vertical-align:middle;
	border-right:1px solid #032052;
}
.course-list .course-item .item-td:first-child{
	width:59px;
}
.course-list .course-item .item-td:last-child{
	border:none;
}
.course-list .item-td-hr{
	height:24px;
	border-bottom:1px solid #032052;
}

.course-list .course-item .select{
	vertical-align:middle;
	cursor:pointer;
	text-align:center;
	color:#032052;
	background:#dcdcdc;
}
.course-list .course-item .select:hover{
	background:#5e5e5e;
	color:#ffffff;
}

.course-list .course-item .select {
	.bookName,.addressName,.className{
		font-size:12px;
	}
}
