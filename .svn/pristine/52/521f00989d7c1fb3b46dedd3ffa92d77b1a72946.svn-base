@import "tobe/function";
@mixin font-dpr($fonts-size){
    font-size: $fonts-size;

    [data-dpr="2"] & {
        font-size: $fonts-size * 2;
    }

    [data-dpr="3"] & {
        font-size: $fonts-size * 3;
    }
}

* {
  margin:0;padding:0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance:none;
  font-family: "Microsoft YaHei";
}
button{border: none;}
button:focus{outline: none;}
html, body{
  height: 100%;
}

.page{
  position: relative;
  height: 100vh;
  width: 100vw;
  background-color: #f1f1f1;
  background-size: 100% auto;
  overflow:hidden;
  display: none;
  background: url(../images/hb.png) center bottom no-repeat,url(../images/bg.png) center top no-repeat;
  background-size: 100%;
  >.tips{
    width: 7rem;
    position: absolute;
    left: 50%;
    bottom: 45%;
    transform: translate(-50%,-50%);
  }
  >.tips2{
    width: 6rem;
    background: rgba(0,0,0,.7);
    color: #FFF;
    text-align: center;
    padding: 0.3rem;
    font-size: .3rem;
    line-height: .5rem;
    position: absolute;
    left: 50%;
    bottom: 50%;
    transform: translate(-50%,-50%);
  }
  >.content{
    position: absolute;
    left: 50%;
    bottom: 5%;
    transform: translate(-50%,0%);
  }
  &.active{
    display: block;
  }
}

.page1{
  >.content{
    >.input{
      padding: 0.7407407407407407rem 0;
      background: url(../images/line1.png) center top no-repeat;
      background-size: 100%;
      text-align: center;
      width: 9rem;
      >input{
        width: 7rem;
        text-align: center;
        border: 0;
        background-color: #fdd23e;
        color: #000;
        padding: 0.09259259259259259rem;
        font-size: 0.46296296296296297rem;
      }
    }
    >.button{
      padding: 0.8rem 0;
      background: url(../images/line2.png) center top no-repeat;
      background-size: 100%;
      text-align: center;
      width: 9rem;
      >button{
        // width: 4rem;
        text-align: center;
        border: 0.1111111111111111rem solid #FFF;
        background-color: #fdd23e;
        color: #b22b24;
        padding: 0.1rem .8rem;
        font-size: 0.5555555555555556rem;
      }
      >.link{
        text-align: right;
        margin-right: 2rem;
        margin-top: .3rem;
        color: #FFF;
      }
    }
  }
}

.page2{
  >.content{
    background: url(../images/line.png) center bottom no-repeat;
    margin-bottom: .8rem;
    >.button{
      padding: 0.7407407407407407rem 0;
      background-size: 100%;
      text-align: center;
      width: 8rem;

      >button{
        // width: 4rem;
        text-align: center;
        border: 0.1111111111111111rem solid #FFF;
        background-color: #fdd23e;
        color: #b22b24;
        padding: 0.2rem .5rem;
        font-size: 0.5555555555555556rem;
      }
      >.text{
        font-size: .533rem;
        color: #FFF;
        margin-top: .2rem;
        &:last-child{
          color:#fdd23e;
          margin-top: 1rem;
        }
      }
    }
  }
}
.mask{
  display: none;
  position: fixed;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.9);
  &.active{
    display: block;
  }
}
