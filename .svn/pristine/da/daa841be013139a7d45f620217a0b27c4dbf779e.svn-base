
var Coupon = {
    actId: null,

    //保存
    save: function(toflag,money) {
        var mydata = {
            israndom: 1,
         };


        var phoneNumber = $("#phoneNumber").val();
        if (phoneNumber.length == 0) {
            $("#errorInfo").html("<font color='#fff'>请填写手机号码</font>");
            return;
        }
        if (phoneNumber.length != 11) {
            $("#errorInfo").html("<font color='#fff'>请填写有效的手机号码</font>");
            return;
        }
        var reg = /^0?1[3|4|5|7|8][0-9]\d{8}$/;
        if (!reg.test(phoneNumber)) {
            $("#errorInfo").html("<font color='#fff'>请填写有效的手机号码</font>");
            return;
        }
        $('#save_btn').attr('disabled', 'disabled').html('获得中...');
        $.post('/morecoupon/save/' + Coupon.actId + "-" + phoneNumber, mydata, function(data) {
            $(".page2").hide();

            console.log(data.robstatus);
            if (data.status == -1 || data.robstatus == 2) {
                //活动结束页面
                $(".end").show();
            } else {
                //成功页面
                if (data.robstatus == 1) {
                    //新用户抢码成功
                    
                    window.location.href ='http://t.cn/R5CctNI';
                }
                if (data.robstatus == 0) {
                    if (toflag == 'chengdu') {
                        $('.page').hide();
                        $('.page6').show();
                    }
                    if (toflag == 'my') {
                        $('.page').hide();
                        $('.page8').show();
                    }
                    if (toflag == 'dsc') {
                        $('.page').hide();
                        $('.page7').show();
                    }
                }
                if (localStorage) {
                    localStorage[Coupon.actId] = phoneNumber;
                }

            }
        });
    }
}

