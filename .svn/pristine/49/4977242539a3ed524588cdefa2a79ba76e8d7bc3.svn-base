 $gridPercentSwitch:true;
 @import "tobe/function";
 @import "base.scss";
 @import "pre.scss";
 body{
    overflow-x: hidden;
 }
 * {
    -webkit-appearance: none;
    -webkit-tap-highlight-color: transparent;
}
 .myselect {
    position: relative;
     border-top: 4px solid #f3f3f3;
     font-size: 0.46875rem;
     text-align: center;
     padding: 10px 0;
 }
 
.myselect:after {
     content: " ";
     display: inline-block;
     -webkit-transform: rotate(0);
     transform: rotate(0);
     width: 0;
     height: 0;
     border-left: 0.125rem solid transparent;
     border-right: 0.125rem solid transparent;
     border-top: 0.125rem solid #6c6c6c;
     position: relative;
     position: absolute;
     top: 50%;
     right: 3rem;
     margin-top: -0.0625rem;
 }
 
 .listbox {
     position: relative;
     a,a:hover,a:active{
        outline: none;
        background:transparent;
     }
     .sellist {
         background-color: #fff;
         position: absolute;
         width: 100%;
         padding: 0.15625rem 0 0.5625rem 0;
         top: 0.0625rem;
         display: none;
         .btnbox {
            overflow: hidden;
            clear: both;
             text-align: center;
             
             margin-top: 0.328125rem;
         }
         .btn {
            float: left;
            overflow: hidden;
            text-overflow: ellipsis;
            
            white-space: nowrap;
             display: inline-block;
             margin-left: 0.25rem;
             width: 2.8rem;
             height: 0.9375rem;
             line-height: 0.9375rem;
             font-size: 0.40625rem;
             color: #626262;
             background-color: #fff;
             border: 1px solid #dcdcdc;
             border-radius: 0.09375rem;
             margin-top: 0.15625rem;
         }
     }
     .list {
         border-top: 0.0625rem solid #f3f3f3;
         padding: 0.1875rem 0;
          clear: both;
          overflow-y: hidden;
          a:after{
            content:'.';
            display: block;
            height: 0;
            clear:both;
            visibility: hidden;
          }
         .imgbox {
             float: left;
             width: 2.875rem;
             height: 2.328125rem;
             margin-left: 0.234375rem;
             img {
                  width: 2.875rem;
             height: 2.328125rem;
             }
         }
         .text {
            width:6rem;
             margin-left: 0.4375rem;
             float: left;
             h4 {
                 font-size: 0.40625rem;
                 color: #323232;
                 @extend %twoellipsis;
             }
             p { 

                width: 6rem;
                color: #5b5b5b;
                 font-size: 0.34375rem;
                 line-height: 1.8;
                 @include ellipsis;
                 
             }
             b {
                 color: #c00;
                 font-size: 0.40625rem;
             }
         }
     }
 }
.box{
    display:flex;
}
%twoellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
