$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@charset "UTF-8";

.container{
	width: 1170px;
    padding: 15px;
    margin:25px auto;
    border:1px solid #ffffff;
    -webkit-box-shadow:0 0 10px #e2e2e2;
  	-moz-box-shadow:0 0 10px #e2e2e2;
  	box-shadow:0 0 10px #e2e2e2;
    background:#ffffff;
	.dialog{
		display: none;
		position:absolute;
		background-color: rgba(0,0,0,0.6);
		width:100%;
		height: 100%;
		left:0;
		top:0;
		z-index: 2;
		.showRandom{
			width:500px;
			height: 400px;
			position:absolute;
			left:50%;
			margin-left:-250px;
			top:50%;
			margin-top:-200px;
			background:#fff;
			.close{
				width:30px;
				height:30px;
				position:absolute;
				right:25px;
				top:25px;
				cursor:pointer;
				background:url(../images/close.png) no-repeat;
				background-size:100% 100%;
			}
			.stuIcon{
				width:200px;
				height: 200px;
				border-radius:50%;
				background-size:100% 100%;
				margin: 60px auto 10px;
			}
			.stuName{
				text-align: center;
				margin-top:50px;
				font-size:28px;				
			}
		}

	}
	.topBar{
		height: 86px;
		line-height: 86px;
		border-bottom:1px solid #e5e5e5;
		.random{
			height:32px;
			line-height:32px;
			background-color:#D20000;
			text-align: center;
			width:110px;
			float: right;
			margin-top:27px;
			margin-right:40px;
			border-radius:4px;
			color:#fff;
			font-size:16px;
		}
	}
	>.content{
		padding:0 40px 0;
		height:513px;
		overflow-y:auto;
		ul{
			&:after{
				display: block;
				content: '.';
				height:0;
				clear: both;
				visibility: hidden;
			}
			.student{
				float:left;
				width:180px;
				height: 130px;
				margin-top:20px;
				.icon{
					width:86px;
					height: 86px;
					border-radius:50%;
					background-size:86px 86px;
					margin: 0 auto;
				}
				.name{
					text-align: center;
					margin-top:14px;
					font-size:14px;
				}
			}
		}
	}
	
}