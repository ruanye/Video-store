$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}

.wrap-page {
    height: 100%;
    max-width: 10.0rem;
    margin: 0 auto;
    position: relative;
}

.page {
    height: 100%;
}

%rel {
    position: relative;
}

%posa {
    position: absolute;
}

%colorf {
    color: #fff;
}

.text-center {
    text-align: center;
}
.red{
    color: #e50012;
}

$width: 100%;
.page1 {
   .topimg{
     width: 10rem;
        @extend %posa;
        text-align: right;
        top: 2.34375rem;
        img{
            @include  inline-block;
            width:8.109375rem;
            height:5.84375rem; 
        }
    }
  .inputbox{
       width: 10rem;
        @extend %posa;
        text-align: center;
        bottom: 5rem;
        input{
            font-size: 0.65625rem;
            @include inline-block;
            width: 7.5625rem;
            height: 1.1875rem;
            text-align: center;
            border: 0.0625rem solid #ca3437;
            @include border-radius(0.125rem);

        }

  }
   .btn{ span{
            @include inline-block;
            width: 7.5625rem;
            height: 1.1875rem;}
        }
   
}
.page2{
    .topimg{
     width: 10rem;
        @extend %posa;
        @extend .text-center;
        top: 2.34375rem;
        img{
            @include  inline-block;
            width:5.53125rem;
            height: 6.375rem; 
        }
    }
}
.page3{
    .wow{
        width: 10rem;
        @extend %posa;
        @extend .text-center;
        top: 1.71875rem;
        img{
            @include  inline-block;
            width: 5.984375rem;
            height: 1.359375rem;
        }
    }
     .star{
        width: 10rem;
        @extend %posa;
        @extend .text-center;
        top: 3.78125rem;
        img{
            @include  inline-block;
            width: 6.203125rem;
            height: 3.984375rem;
        }
    }
    .text{
        width: 10rem;
         @extend %posa;
        @extend .text-center;
        top:1.96875rem;
        font-size: 0.75rem;
        color: #ca3437;
        line-height: 1.2;
    }
    .text2{
        margin-bottom: 0.15625rem;
        font-size: 0.40625rem;
        color: #ca3437;
        a{
            font-size: 0.5625rem;
        }
    }
    .con{
         @extend %posa;
         width: 10rem;
         top: 8.046875rem;
        p,div{
            width: 10rem;
            @extend .text-center;
        }
        .tbtn{
            @include inline-block;
            width: 4.09375rem;
            height: 0.78125rem;
            line-height: 0.78125rem;
            background-color: #771c20;
            @include border-radius(0.125rem);
            font-size: 0.40625rem;
            color: #fff;
        }
    }
    .texti{
       text-indent: 3.640625rem;

    }
     .sbtn{
        @include inline-block;
        width: 2.96875rem;
        height: 1.15625rem;
        line-height:  1.15625rem;
        font-size: 0.5625rem;
        margin: 0 0.46875rem;
        color: #fff;
        background-color: #ca3437;
     }
}

.page4 {
@extend %rel;
     .share {
        @extend %posa;
        width: 4.4375rem;
        height: 1.734375rem;
        right: 0.703125rem;
        top: 0.46875rem;
    }
    .text1 {
        @extend %posa;
         color: #ca3437;
        font-size: 0.59375rem;
        left: 1.65625rem;
        top: 3.375rem;
        span {
            
            color: #771c20;
        }
    }
    .xiaou {
        width: 6.328125rem;
        height: 5.3125rem;
        @extend %posa;
        left: 1.65625rem;
        top: 6.6rem;
    }
   
}
.bottom{
   @extend %posa;
   height: 2.0rem;
    bottom: 0;
    img{
        width: 10.0rem;
        height: 2.0rem;
    }
}
.top{
  width: 10rem;
 @extend %posa; 
 @extend .text-center;
 top: 0.625rem;
 img{
    
 }
}
 .btn{
        width: 10rem;
        @extend %posa;
        bottom: 2.4rem;
        @extend .text-center;
        span{
            @include inline-block;
            width: 6.640625rem;
            height: 1.1875rem;
            line-height: 1.1875rem;
            font-size: 0.75rem;
            color: #fff;
            background-color: #ca3437;
            @include border-radius(0.125rem)
        }
        b{
            font-weight: 400;
            color: #771c20;
            font-size: 0.375rem;
        }
        i{
            text-decoration: none;
            font-style: normal;
            font-size: 1.0rem;
            color: #ca3437;
            a{
                color: #fff;
                background-color: #ca3437;
            }
        }
    }


