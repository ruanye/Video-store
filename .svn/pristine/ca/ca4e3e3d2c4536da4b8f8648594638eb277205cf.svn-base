$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color:#f8f8f8;
}
*{
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}

.wrap-page {
	.search{
		display: flex;
		border-bottom:1px solid #b7b7b7;
		background-color:#fff;
		position: relative;
		.search-btn{
			height:1.09375rem;
			width:1.571875rem;
			background-color: #e5e5e5;
			line-height: 1.09375rem;
			text-align:center;
			font-size:0.42875rem;
			position:relative;
		}
		.input{
			width:100%;
			.input-name{
				display: block;
				width:100%;
				height: 0.625rem;
				padding:0.234375rem 0.46875rem;
				border:none;
				font-size:0.40625rem;
			}
		}
		.close{
			position:absolute;
			right:1.58125rem;
			top:0.234375rem;
			height: 0.6875rem;
			width:0.640625rem;
			background:url(../images/1/close.png) no-repeat;
			background-size:100% 100%;
		}
	}
	.nav-bar{
		display: flex;
		height: 1.09375rem;
		background-color:#fff;
		.item{
			width:24.5%;
			text-align: center;
			font-size:0.4375rem;
			height:0.78125rem;
			line-height: 0.78125rem;
			margin:0.15625rem 0;
			border-right:1px solid #d3d3d3;
			position:relative;
			&:last-child(){
				border-right:none;
			}
			.warnText{
				width:83%;
				height:100%;
				overflow: hidden;
			}
			.trigon{
				width:0.25rem;
				height: 0.171875rem;
				background:url(../images/1/select-trigon.png) no-repeat;
				background-size:100% 100%;
				display: block;
				position:absolute;
				right:0.15625rem;
				top:0.3525rem;

			}
			.slide-box{
				position:absolute;
				left:0;
				top:1.09375rem;
				background:#F0F0F0;
				z-index: 111;
				width:100%;
				display: none;
				height: 0;
				overflow:hidden;
			}
			.slide-box.special{
				width:4rem;
			}
		}
		.item.active{
			.slide-box{
				height: auto;
				display: block;
			}
		}
	}
	.nav-content{
		.item{
			margin-top:0.1725rem;
			background-color:#fff;
			padding:0.25625rem 0;
			.docutor-detail{
				display: flex;
				width:100%;
				height: 100%;
			}
			.left{
				width:30%;
				height: 2.34375rem;
				// background:url(../images/1/head-icon.png) no-repeat center center;
				background-repeat:no-repeat;
				background-position:center center;
				background-size:2.265625rem 2.265625rem;
			}
			.right{
				margin-left: 0.16875rem;
				width:70%;
				color:#5b5b5b;
				.flex{
					display: flex;
				}
				.name{
					font-size:0.40875rem;
				}
				.store{
					font-size:0.36rem;
					margin-top:0.15625rem;
				}
				.price{
					font-size:0.36rem;
				}
				.detail-docutor{
					font-size:0.36rem;
					.text{
						width:1.46875rem;
					}
					.text-show{
						width:90%;
						max-height: 1.1rem;
					    overflow: hidden;
					}
				}
			}
		}
	}
}


