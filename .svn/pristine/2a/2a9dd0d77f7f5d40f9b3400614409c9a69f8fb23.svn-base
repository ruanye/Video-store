@import "tobe/function";
@import "base";
.toleft{position:relative;left: -20%;}
        
.leftline{border-left:1px solid #aaaaaa;padding-left:4px;}
.topline{border-top:1px solid #f2f1f7;}
.padding_10{padding-top:10px;padding-bottom:10px;}
.font_msg{color:#7f7f7f;}
.font_money{color:#cc0000;}

.item-inner{padding-left: .75rem !important;}
.bottomline{border-bottom:1px solid #e5e5e5;padding-left:4px;}
.padding20{padding-bottom:26px !important;margin-top:-10px;}
ul{background:#f2f1f7 !important;}
ul>li{background:#ffffff !important;}
.item-inner2 {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    position: relative;
    width: 100%;
    padding-top: .4rem;
    padding-bottom: .4rem;
    min-height: 1.3rem;
    overflow: hidden;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.item-inner3 {
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    position: relative;
    width: 100%;
    padding-top: .4rem;
    padding-bottom: .4rem;
    min-height: 1.3rem;
    overflow: hidden;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.item-content{
    min-height: 1.6rem!important;
}
.coupon-slide{
    position:absolute;
    width:100%;
    height: 35%;
    bottom:0;
    background:#eee;
    animation:slideUp 0.2s linear;
    display: none;
    z-index: 111;
    .couponList{
        margin-top:0.48125rem;
        .coupon-item{
            font-size:16px;
            text-align: center;
            display: flex;
            margin-top:0.15625rem;
            .left{
                width:2.5625rem;
                position: relative;
                .circle{
                    width:14px;
                    height: 14px;
                    position:absolute;
                    left: 1.0125rem;
                    top:50%;
                    transform:translate(0,-50%);
                    background:url(../images/noselect.png) no-repeat center center;
                    background-size:100% 100%;
                }
            }
        }
        .coupon-item.active{
            .left{
                .circle{
                    background:url(../images/onselect.png) no-repeat center center;
                    background-size:100% 100%;
                }
            }
        }
    }
}
.select-btn{
    margin-bottom: 0.3125rem;
    background-color: #A6CE38;
    border:none;
    color:#000;
    background:#fff url(../images/coupon.png) no-repeat 29% center;
    background-size:0.875rem 0.84375rem;
    height: 1.5625rem;
    line-height: 1.56rem;
    text-align: center;
    font-size:0.6875rem;
    border-radius:0.20625rem;
}
.pay-type-btn{
    margin-bottom: 0.3125rem;
    background-color: #A6CE38;
    border:none;
    color:#fff;
    background:#6FBFF4;
    background-size:0.875rem 0.84375rem;
    height: 1.5625rem;
    line-height: 1.56rem;
    text-align: center;
    font-size:0.6875rem;
    border-radius:0.20625rem;    
}
.list-block{
    font-size:0.6rem;
}
.paymethod-slide{
    position:absolute;
    width:100%;
    height: 35%;
    bottom:0;
    background:#eee;
    animation:slideUp 0.2s linear;
    display: none;
    z-index: 111;   
    .list{
        display: flex;
        justify-content: center;
        margin-top:2.34375rem;
        .left{
            width:80px;
            height: 30px;
            line-height: 27px;
            margin-right:20px;
            border:1px solid red; 
            text-align: center;
            border-radius:3px; 
        }
        .right{
            width:80px;
            height: 30px;
            line-height: 27px;
            margin-left:20px;  
            border:1px solid red; 
            text-align: center;
            border-radius:3px;         
        }
    }
}
@keyframes slideUp{
    0%{
        transform: translate3d(0,100%,0)
    }    
    100%{
        transform: translate3d(0,0,0)
    }
}