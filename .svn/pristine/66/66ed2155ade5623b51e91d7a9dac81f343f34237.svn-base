$gridPercentSwitch: true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";

body, html {
  height: 100%;
}
body {
  font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}
::-webkit-input-placeholder {

  /* WebKit browsers */
  color: #fff;
}
:-moz-placeholder {

  /* Mozilla Firefox 4 to 18 */
  color: #fff;
}
::-moz-placeholder {

  /* Mozilla Firefox 19+ */
  color: #fff;
}
:-ms-input-placeholder {

  /* Internet Explorer 10+ */
  color: #fff;
}
$bgcolor: #c64a4b;

.wrap-page {
  height: 100%;
  width: 10.0rem;
  margin: 0 auto;
  position: relative;
}
.page {
  background: url(../images/bg.png) no-repeat;
  background-size: 10rem 13.9375rem;
  height: 100%;
  background-color: $bgcolor;
  position: relative;
}
.text-center {
  text-align: center;
}
$width: 10rem;

img, span, input {
  @include inline-block;
}
.bottom {
  display: table;
  width: $width;
  position: absolute;
  background-color: #4b4291;
  top: 13.9375rem;
  min-height: 21%;

  span {
    display: table-cell;
    vertical-align: middle;
  }
  img {
    width: 3.734375rem;
    height: auto;
    vertical-align: middle;
  }
}
.title {
  img {
    width: 6.453125rem;
    height: auto;
    margin-top: 1.171875rem;
  }
}
.hander {
  position: absolute;
  top: 5.859375rem;
  left: 1.78125rem;

  img {
    width: 6.765625rem;
    height: auto;
  }
}
.choujiangbtn,.sharebtn {
  position: absolute;
  right: 0.15625rem;
  top: 9.75rem;

  img {
    width: 3.640625rem;
    height: auto;
  }
}
.selcity {
  padding-top: 0.5rem;
  text-align: center;

  li {
    display: inline-block;
    width: 8.015625rem;
    height: 1.9375rem;
    background-color: #55bdec;
    border: 0.078125rem solid #4b4291;
    margin-top: 0.5625rem;
    overflow: hidden;
    clear: both;

    span {
      float: left;
      height: 100%;

      &:nth-child(1) {
        width: 68%;

        img {
          width: 4.265625rem;
          margin-top: 0.625rem;
        }
      }
      &:nth-child(2) {
        width: 32%;
        background: #4b4291;

        img {
          width: 1.578125rem;
          margin-top: 0.78125rem;
        }
      }
    }
  }
}
.ntext {
  img {
    margin-top: 4.15625rem;
    width: 8.671875rem;
    height: auto
  }
}
.shtext {
  &.one {
    margin-top: 2.03125rem;
  }
  font-size: 0.5625rem;
  color: #fff;
  text-indent: 0.9375rem;
}
.my {
  position: absolute;
  top: 1.1875rem;

  img {
    width: 9.296875rem;
    height: auto
  }
}
.phonebox {
  padding-top: 2.09375rem;
  position: relative;
}
.phone {
  width: 4.46875rem;
  height: 8.96875rem;
  background-image: url(../images/phone.png);
  background-size: 100% 100%;
}
.inputbox {
  position: absolute;
  top: 4.109375rem;
  left: 50%;
  margin-left: -4.09375rem;
  width: 8.1875rem;
  height: 1.609375rem;
  background-color: #4b4291;

  input {
    margin-top: 0.15625rem;
    border: none;
    vertical-align: middle;
    width: 7.796875rem;
    height: 1.25rem;
    background-color: #55bdec;
    border-radius: 0.234375rem;
    font-size: 0.75rem;
    text-align: center;
    color: #fff;
  }
  &.btn {
    width: 2.375rem;
    height: 0.9375rem;
    line-height: 0.9375rem;
    background-color: #c64a4b;
    color: #fff;
    font-size: 0.5rem;
    border-radius: 0.15625rem;
    margin-left: -1.1875rem;
    top: 8.265625rem;
  }
}
.dian {
  width: $width;
  position: absolute;
  top: 5.703125rem;
}
.zhuanpan {
  margin: 0 auto;
  position: relative;
  width: 8.734375rem;
  height: 8.734375rem;
  background: url(../images/cdzhuanpan.png) no-repeat;
  background-size: 100% 100%;
  top: 2.4375rem;

  &.one {
    background: url(../images/myzhuanpan.png) no-repeat;
    background-size: 100% 100%;
  }
  &.two {
    background: url(../images/dsczhuanpan.png) no-repeat;
    background-size: 100% 100%;
  }
}
.circle {
  position: absolute;
  width: 3.625rem;
  height: 4.390625rem;
  margin-left: -1.8125rem;
  margin-top: -2.6rem;
  left: 50%;
  top: 50%;
}
.icon {
  width: $width;
  position: absolute;
  top: 12.3125rem;

  img {
    width: 3.0rem;
    height: 0.765625rem;
  }
}
.turntable-content {
  position: relative;
  width: 8.75rem;
  height: 12.506667rem;
  margin: 0 auto;
  //background: url(../images/turntable-bg.png)center bottom no-repeat;
  background-size: 90% auto;

  /* 大转盘样式 */
  .turnplate {
    display: block;
    width: 100%;
    position: relative;
    top: 1.49833rem;
    margin-left: -0.105rem;
   

    background-size: 100% 100%;
   .item {
      width: 100%;
      position: relative;
      transform: rotate(245deg);
      background-color: transparent;
      background-image: url(../images/myzhuanpan.png);
    }
    .pointer, .pointer1,.pointer2{
      position: absolute;
      width: 3.625rem;
      height: 4.390625rem;
      margin-left: -1.8125rem;
      margin-top: -2.6rem;
      left: 50%;
      top: 50%;
      z-index: 99999;
    }
    &:after {
      position: absolute;
      top: 2.34375rem;
      right:2.265625rem;
      content: "";
      border: 20px solid #4b4291;
      border-radius: 50%;
      width: 40%;
      height: 40%;
      display: block;
      z-index: 3;
    }
  }
}