$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "header.scss";
@charset "UTF-8";

.container{
	width:1200px;
	min-height:600px;
	background:#ffffff;
	margin:20px auto;
	box-shadow:3px 3px 3px #eaeaea,-3px -3px 3px #eaeaea;
	.topBar{
		height: 86px;
		line-height: 86px;
		border-bottom:1px solid #e5e5e5;
		.stopAnswer{
			height:32px;
			background-color:#D20000;
			text-align: center;
			width:110px;
			float:right;
			margin-right:40px;
			margin-top:27px;
			border-radius:4px;
			font-size:16px;
			color:#fff;
			line-height: 32px;
		}
	}
	.content{
		.answering{
			width:320px;
			margin: 0 auto;
			margin-top:70px;
			.studentIcon{
				height: 320px;
				border-radius:50%;
				border:1px solid #dcdcdc;
				background:url(../images/quickAnswer1.png) no-repeat;
				background-size:100% 100%;
			}
			.text{
				text-align: center;
				font-size:20px;
				margin-top:25px;
			}
		}
	}
	
}