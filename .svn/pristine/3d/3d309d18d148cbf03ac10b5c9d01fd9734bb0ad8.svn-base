$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma,s arial, 'Hiragino Sans GB', '宋体', sans-serif;
    background-color: #f8f8f8;
}

* {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

@font-face {
    font-family: 'iconfont';
    src: url('fonts/iconfont/iconfont.eot');
    /* IE9*/
    src: url('fonts/iconfont/iconfont.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('fonts/iconfont/iconfont.woff') format('woff'), /* chrome、firefox */
    url('fonts/iconfont/iconfont.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('fonts/iconfont/iconfont.svg#iconfont') format('svg');
    /* iOS 4.1- */
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 0.49375rem;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
    color: #333;
}

.wrap-page {
    color: #b8b8b8;
    .person-information {
       
        background-color: #fff;
        .information-detail {
            padding: 0.35625rem 0;
            height: 1.51875rem;
            border-bottom: 1px solid #dcdcdc;
            position: relative;
            color: #5a5a5a;
            .information-p {
                padding-bottom: 0.155rem;
                margin-left: 0.53125rem;
                font-size: 0.445rem;
                color: #888;
            }
        }
        .information-address {
            background-color:#fff;
            height: 1.25rem;
           box-shadow: 0px 5px 10px #dcdcdc;
            position: relative;
            .address-icon {
                position: absolute;
                left: 0.46875rem;
                top: 0.24875rem;
                color: #6195c6;
            }
        }
    }
    .person-commodity {
        margin-top: 0.458125rem;
        height: 3.75625rem;
        background-color: #fff;
       box-shadow: 0px 5px 10px #dcdcdc;
        .commodity-detail {
            height: 1.25rem;
            height: 1.25rem;
            border-bottom: 1px solid #dcdcdc;
            position: relative;
            &:last-child{
                 border-bottom:none;
            }
            .shop-icon {
                position: absolute;
                left: 0.34875rem;
                top: 0.24rem;
                color: #d74343;
            }
            .order-icon {
                position: absolute;
                left: 0.46875rem;
                top: 0.25rem;
                color: #d38080;
            }
            .specail {
                color: #76a4e9;
            }
        }
    }
    .person-activity {
        margin-top: 0.458125rem;
        height: 2.55625rem;
        background-color: #fff;
        box-shadow: 0px 5px 10px #dcdcdc;
        .activity-detail {
            height: 1.25rem;
            height: 1.25rem;
            border-bottom: 1px solid #dcdcdc;
            position: relative;
            
              &:last-child{
                 border-bottom:none;
            }
            .shop-icon {
                position: absolute;
                left: 0.46875rem;
                top: 0.28rem;
                color: #68b06a;
            }
            .order-icon {
                position: absolute;
                left: 0.46875rem;
                top: 0.27rem;
                color: #50b29e;
            }
        }
    }
}

.information-icon {
    position: absolute;
    right: 0.46875rem;
    top: 50%;
    margin-top: -0.234375rem;
    background: url(../images/1/trigon.png) no-repeat;
    background-size: 100% 100%;
    width: 0.28125rem;
    height: 0.484375rem;
}

.text {
    margin-left: 1.34375rem;
    line-height: 1.25rem;
    font-size: 0.445rem;
    color: #888888;
}
