    bgColors:[],                //大转盘奖品区块对应背景颜色
    colors:[],                  //大转盘奖品区块对应字体颜色
    outsideRadius:185,          //大转盘外圆的半径
    textRadius:125,             //大转盘奖品位置距离圆心的距离
    insideRadius:74,            //大转盘内圆的半径
    startAngle:0,               //开始角度
    bRotate:false               //false:停止;ture:旋转
};

var startDraw = function(){};
    
  


    //动态添加大转盘的奖品与奖品区域背景颜色
    turnplate.bgColors = ["#fff", "#55bdec","#fff", "#55bdec","#fff", "#55bdec"];
    turnplate.colors = ["#4b4291", "#c64a4b", "#4b4291", "#c64a4b","#4b4291", "#c64a4b", "#4b4291", "#c64a4b"]; 
    console.log(jiangArray);
    turnplate.restaraunts =jiangArray;
    drawRouletteWheel()

    var rotateTimeOut = function (){
