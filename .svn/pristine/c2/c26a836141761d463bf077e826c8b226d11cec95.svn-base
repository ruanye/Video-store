$gridPercentSwitch:true;
@import "tobe/function";
@import "base.scss";
@import "pre.scss";
@charset "UTF-8";
body,
html {
    height: 100%;
}

body {
    font: 12px/1.5 "Microsoft YaHei", tahoma, arial, 'Hiragino Sans GB', '宋体', sans-serif;
}

.wrap-page {
    height: 100%;
    max-width: 10.0rem;
    margin: 0 auto;
    position: relative;
}

.page {
    height: 100%;
    position: relative;
    background-image: url(../images/dw_03.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

%rel {
    position: relative;
}

%posa {
    position: absolute;
}

%colorf {
    color: #fff;
}

.text-center {
    text-align: center;
}

.top {
    position: absolute;
    top: 0;
    width: 10rem;
    color: #fff;
    background-color: #231816;
    height: 1.5rem;
    line-height: 1.5rem;
    font-size: 0.8125rem;
}

.page1 {
    .text {
        position: absolute;
        top: 1.5rem;
        width: 5.359375rem;
        height: 1.84375rem;
        background-color: #ccddef;
        border-left: 0.125rem solid #163880;
        margin-top: 0.875rem;
        margin-left: 4.21875rem;
        p {
            text-indent: 0.3125rem;
            &.p1 {
                font-size: 0.46875rem;
            }
            &.p2 {
                font-size: 0.78125rem;
            }
        }
    }
    .contaner {
        position: relative;
        width: 10.0rem;
        top: 4.6875rem;
        left: 0.125rem;
        .sq {
            width: 7.5rem;
            height: 10.15625rem;
        }
        .yb {
            position: absolute;
            right: 0.3125rem;
            bottom: 0;
            width: 2.234375rem;
            height: 2.234375rem;
        }
        .ch {
            position: absolute;
            right: 0.3125rem;
            bottom: 3.125rem;
            width: 3.4375rem;
            height: 1.0rem;
            line-height: 1.0rem;
            color: #fff;
            font-size: 0.53125rem;
            border-radius: 0.3125rem;
            border: 1px solid #297d99;
            text-align: center;
            background-color: #36b9be;
        }
    }
}

.img {
    width: 10rem;
    position: absolute;
    top: 1.5rem;
    img {
        width: 2.234375rem;
        height: 2.234375rem;
        margin-left: 0.90625rem;
        margin-top: 0.90625rem;
    }
}

.form {
    position: absolute;
    top: 8.75rem;
    width: 10.0rem;
    text-align: center;
    span,
    input {
        @include inline-block;
    }
    &.form1{
        top: 6rem;
    }
}

.page2 {
    .text1 {
        font-size: 0.59375rem;
    }
    input {
        width: 6.1875rem;
        height: 1.09375rem;
        line-height: 1.09375rem;
        border-radius: 0.3125rem;
        border: 1px solid #297d99;
    }
    .sure {
        width: 2.28125rem;
        height: 1.0625rem;
        margin-top: 0.625rem;
        line-height: 1.0625rem;
        text-align: center;
        border-radius: 0.3125rem;
        border: 1px solid #297d99;
        background-color: #36b9be;
        color: #fff;
    }
}

.page3 {
    .text2 {
        font-size: 1.3125rem;
        color: #48b4b6;
        letter-spacing: 0.25rem;
    }
    .text3 {
        font-size: 0.5625rem;
        color: #3c528b;
        font-weight: 700;
    }
    .imgbox {
        margin-top: 0.15625rem;
        margin-bottom: 0.625rem;
        img {
            width: 5.484375rem;
            height: 2.71875rem;
        }
    }
}
.page4{
    .img4{
         width: 10rem;
         position: absolute;
         text-align: center;
         top: 2.8rem; 

         img{
            @include inline-block;
            width: 2.234375rem;
            height: 2.234375rem;
         }
    }
    .text2{
        color: #211716;
        font-size: 0.78125rem;
    }
    .text3{
        font-size: 0.375rem;
        color: #000;
        font-weight: 700;
        &.next{
            margin-top: 0.9375rem;
        }
        span{
            color: #3fb9be;
            margin-top: 0.3125rem;
        }
    }
    .sure{
        margin-top: 0.3125rem;
        width: 4.84375rem;
        height: 1.25rem;
        line-height: 1.25rem;
        color: #fff;
        font-size: 0.75rem;
         border-radius: 0.3125rem;
        border: 1px solid #297d99;
        background-color: #3fb9be;
        &.sure1{
            margin-top: 0.15625rem;
            margin-bottom: 0.15625rem;
            width: 3.125rem;
            height: 0.78125rem;
            line-height: 0.78125rem;
            font-size: 0.5rem;
        }
    }
}
