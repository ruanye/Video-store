}

//清屏并绘制缓存
function drawBuffer(fontCtx, fontCvs,  backCtx, backCvs){
    fontCtx.clearRect(0, 0, fontCvs.width, fontCvs.height);
    fontCtx.drawImage(backCvs, 0, 0);
}

